@model IEnumerable<TicketSystem.Domain.Entities.TicketCategory>
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="h-screen overflow-hidden bg-gray-50 p-4">
    <div class="max-w-7xl mx-auto h-full flex flex-col">

        <!-- Header Section -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-folder text-purple-600 mr-3"></i>
                    Ticket Kategorileri
                </h1>
                <p class="text-gray-600 mt-1">Ticket kategorilerini yönetin, düzenleyin ve yeni kategori ekleyin</p>
            </div>
            <div class="mt-4 sm:mt-0 flex items-center space-x-3">
                <!-- Search Box -->
                <div class="relative">
                    <input type="text"
                           id="searchInput"
                           placeholder="Kategori ara..."
                           class="w-80 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 transition-colors"
                           autocomplete="off">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                </div>

                <a href="/Admin/Categories/Create"
                   class="inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 shadow-lg transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Yeni Kategori
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        @if (Model.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-purple-100 mr-3">
                            <i class="fas fa-folder text-purple-600"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">Toplam Kategori</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-green-100 mr-3">
                            <i class="fas fa-check-circle text-green-600"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">Aktif Kategori</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count(c => c.IsActive)</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-blue-100 mr-3">
                            <i class="fas fa-puzzle-piece text-blue-600"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">Toplam Modül</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Sum(c => c.Modules.Count())</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                    <div class="flex items-center">
                        <div class="p-3 rounded-full bg-red-100 mr-3">
                            <i class="fas fa-times-circle text-red-600"></i>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-600">Pasif Kategori</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count(c => !c.IsActive)</p>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Categories Grid -->
        <div class="flex-1 overflow-y-auto">
            @if (Model.Any())
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pb-6" id="categoriesGrid">
                    @foreach (var category in Model.OrderBy(x => x.SortOrder))
                    {
                        <div class="category-card bg-white rounded-xl shadow-sm border border-gray-200 hover:shadow-md transition-all duration-200 overflow-hidden">
                            <!-- Category Header -->
                            <div class="relative">
                                <div class="h-20 bg-gradient-to-r from-gray-50 to-gray-100 flex items-center justify-center relative overflow-hidden">
                                    <div class="absolute inset-0 opacity-10" style="background-color: @category.Color;"></div>
                                    <div class="w-16 h-16 rounded-full flex items-center justify-center z-10" style="background-color: @(category.Color)20;">
                                        <i class="fas fa-@category.Icon text-3xl" style="color: @category.Color;"></i>
                                    </div>
                                </div>

                                <!-- Status Badge -->
                                <div class="absolute top-3 right-3">
                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                                    @(category.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                        @(category.IsActive ? "Aktif" : "Pasif")
                                    </span>
                                </div>

                                <!-- Sort Order -->
                                <div class="absolute top-3 left-3">
                                    <span class="inline-flex px-2 py-1 text-xs font-medium bg-gray-200 text-gray-700 rounded-full">
                                        #@category.SortOrder
                                    </span>
                                </div>
                            </div>

                            <!-- Category Content -->
                            <div class="p-6">
                                <!-- Title -->
                                <div class="mb-4">
                                    <h3 class="text-xl font-semibold text-gray-900 mb-1 category-name">@category.Name</h3>
                                    <p class="text-sm text-gray-600 line-clamp-2">@(category.Description ?? "Açıklama eklenmemiş")</p>
                                </div>

                                <!-- Modules Section -->
                                <div class="mb-6">
                                    <div class="flex items-center justify-between mb-3">
                                        <span class="text-sm font-medium text-gray-700 flex items-center">
                                            <i class="fas fa-puzzle-piece mr-2 text-blue-500"></i>
                                            Modüller
                                        </span>
                                        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
                                            @category.Modules.Count() adet
                                        </span>
                                    </div>

                                    @* @if (category.Modules.Any())
                                    {
                                        <div class="space-y-2">
                                            @foreach (var module in category.Modules.Where(m => m.IsActive).Take(3).OrderBy(m => m.SortOrder))
                                            {
                                                <div class="flex items-center justify-between p-2 bg-gray-50 rounded-lg">
                                                    <span class="text-sm text-gray-700 flex items-center">
                                                        <i class="fas fa-cube text-xs text-gray-400 mr-2"></i>
                                                        @module.Name
                                                    </span>
                                                    @if (module.IsActive)
                                                    {
                                                        <span class="w-2 h-2 bg-green-400 rounded-full"></span>
                                                    }
                                                </div>
                                            }
                                            @if (category.Modules.Count() > 3)
                                            {
                                                <div class="text-center">
                                                    <span class="text-xs text-gray-500">+@(category.Modules.Count() - 3) daha fazla modül</span>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-center py-4 text-gray-500">
                                            <i class="fas fa-info-circle text-2xl mb-2"></i>
                                            <p class="text-xs">Henüz modül eklenmemiş</p>
                                        </div>
                                    } *@
                                </div>

                                <!-- Action Buttons -->
                                <div class="flex space-x-2">
                                    <a href="/Admin/Categories/Edit/@category.Id"
                                       class="flex-1 bg-blue-600 text-white text-center py-2 px-3 rounded-lg text-sm hover:bg-blue-700 transition-colors flex items-center justify-center">
                                        <i class="fas fa-edit mr-2"></i>Düzenle
                                    </a>

                                    <form method="post" action="/Admin/Categories/ToggleStatus/@category.Id" class="flex-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit"
                                                class="w-full @(category.IsActive ? "bg-yellow-600 hover:bg-yellow-700" : "bg-green-600 hover:bg-green-700") text-white py-2 px-3 rounded-lg text-sm transition-colors flex items-center justify-center">
                                            <i class="fas fa-@(category.IsActive ? "pause" : "play") mr-2"></i>
                                            @(category.IsActive ? "Pasif Et" : "Aktif Et")
                                        </button>
                                    </form>

                                    <form method="post" action="/Admin/Categories/Delete/@category.Id"
                                          onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="bg-red-600 text-white py-2 px-3 rounded-lg text-sm hover:bg-red-700 transition-colors">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <!-- Empty State -->
                <div class="text-center py-20">
                    <div class="max-w-md mx-auto">
                        <div class="w-20 h-20 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-6">
                            <i class="fas fa-folder text-purple-600 text-3xl"></i>
                        </div>
                        <h3 class="text-xl font-medium text-gray-900 mb-2">Henüz kategori eklenmemiş</h3>
                        <p class="text-gray-500 mb-8">İlk kategoriyu oluşturarak ticket sisteminizi organize etmeye başlayın.</p>
                        <a href="/Admin/Categories/Create"
                           class="inline-flex items-center px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 shadow-lg transition-colors">
                            <i class="fas fa-plus mr-2"></i>
                            İlk Kategoriyi Oluştur
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const categoryCards = document.querySelectorAll('.category-card');

        if (searchInput) {
            searchInput.addEventListener('input', function() {
                const searchTerm = this.value.toLowerCase();

                categoryCards.forEach(card => {
                    const categoryName = card.querySelector('.category-name').textContent.toLowerCase();
                    const shouldShow = categoryName.includes(searchTerm);

                    if (shouldShow) {
                        card.style.display = 'block';
                    } else {
                        card.style.display = 'none';
                    }
                });
            });
        }
    });
</script>