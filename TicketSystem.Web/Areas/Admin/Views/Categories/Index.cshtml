@model IEnumerable<TicketSystem.Domain.Entities.TicketCategory>
@{
    ViewData["Title"] = "Kategori Yönetimi";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold text-gray-900">Ticket Kategorileri</h2>
    <a href="@Url.Action("Create")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
        <i class="fas fa-plus mr-2"></i>Yeni Kategori
    </a>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    @foreach (var category in Model)
    {
        <div class="bg-white rounded-lg shadow border-l-4" style="border-left-color: @category.Color;">
            <div class="p-6">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4" style="background-color: @category.Color; opacity: 0.1;">
                            <i class="fas fa-@category.Icon text-2xl" style="color: @category.Color;"></i>
                        </div>
                        <div>
                            <h3 class="text-lg font-medium text-gray-900">@category.Name</h3>
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    @(category.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @(category.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </div>
                    </div>
                </div>

                <p class="text-gray-600 text-sm mb-4">@category.Description</p>

                <!-- Modules -->
                <div class="mb-4 p-3 bg-gray-50 rounded">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-gray-700">Modüller</span>
                        <span class="text-xs text-gray-500">@category.Modules.Count()</span>
                    </div>
                    @if (category.Modules.Any())
                    {
                        <div class="flex flex-wrap gap-1">
                            @foreach (var module in category.Modules.Take(3))
                            {
                                <span class="inline-flex px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded">
                                    @module.Name
                                </span>
                            }
                            @if (category.Modules.Count() > 3)
                            {
                                <span class="text-xs text-gray-500">+@(category.Modules.Count() - 3) daha</span>
                            }
                        </div>
                    }
                    else
                    {
                        <span class="text-xs text-gray-500">Modül tanımlanmamış</span>
                    }
                </div>

                <!-- Actions -->
                <div class="flex space-x-2">
                    <a href="@Url.Action("Edit", new { id = category.Id })"
                       class="flex-1 bg-blue-600 text-white text-center py-2 px-3 rounded text-sm hover:bg-blue-700">
                        <i class="fas fa-edit mr-1"></i>Düzenle
                    </a>

                    @* <form method="post" asp-action="ToggleStatus" asp-route-id="@category.Id" class="flex-1">
                        <button type="submit" class="w-full @(category.IsActive ? "bg-yellow-600 hover:bg-yellow-700" : "bg-green-600 hover:bg-green-700") text-white py-2 px-3 rounded text-sm">
                            <i class="fas fa-@(category.IsActive ? "pause" : "play") mr-1"></i>
                            @(category.IsActive ? "Pasif" : "Aktif")
                        </button>
                    </form> *@

                    <form method="post" 
                        action="@Url.Action("Delete", "Categories", new { area = "Admin", id = category.Id })"
                          asp-anti-forgery="true" 
                          onsubmit="return confirm('Bu kategoriyi silmek istediğinizden emin misiniz?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="bg-red-600 text-white py-2 px-3 rounded text-sm hover:bg-red-700">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-12">
        <i class="fas fa-folder text-gray-400 text-4xl mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz kategori yok</h3>
        <p class="text-gray-500 mb-4">İlk kategorinizi oluşturun.</p>
        <a href="@Url.Action("Create")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i>Yeni Kategori
        </a>
    </div>
}