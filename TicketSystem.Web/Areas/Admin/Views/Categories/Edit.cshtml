@model TicketSystem.Web.Areas.Admin.Models.EditCategoryViewModel
@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Kategori Düzenle</h2>
    </div>

    <form method="post" asp-action="Edit" class="p-6">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded"></div>

        <!-- Basic Info -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Name" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="DisplayOrder" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="DisplayOrder" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
            </div>

            <div class="lg:col-span-2">
                <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <textarea asp-for="Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
            </div>

            <div>
                <label asp-for="Icon" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <select asp-for="Icon" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="folder">📁 Folder</option>
                    <option value="globe">🌐 Web</option>
                    <option value="mobile-alt">📱 Mobile</option>
                    <option value="code">💻 Code</option>
                    <option value="database">🗃️ Database</option>
                    <option value="cog">⚙️ Settings</option>
                    <option value="shield-alt">🛡️ Security</option>
                    <option value="chart-bar">📊 Analytics</option>
                </select>
            </div>

            <div>
                <label asp-for="Color" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <div class="flex space-x-2">
                    <input asp-for="Color" type="color" class="w-16 h-10 border border-gray-300 rounded-md" />
                    <input asp-for="Color" type="text" class="flex-1 px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                </div>
            </div>

            <div class="lg:col-span-2">
                <label class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <span class="ml-2 text-sm text-gray-700">Aktif</span>
                </label>
            </div>
        </div>

        <!-- Modules Management -->
        <div class="border-t border-gray-200 pt-8">
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-medium text-gray-900">Modüller</h3>
                <button type="button" id="addModuleBtn" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">
                    <i class="fas fa-plus mr-2"></i>Modül Ekle
                </button>
            </div>

            <div id="modulesList" class="space-y-4">
                @for (int i = 0; i < Model.Modules.Count; i++)
                {
                    <div class="border border-gray-200 rounded-lg p-4">
                        <input type="hidden" asp-for="Modules[i].Id" />
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Modül Adı</label>
                                <input asp-for="Modules[i].Name" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Açıklama</label>
                                <input asp-for="Modules[i].Description" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Sıralama</label>
                                <input asp-for="Modules[i].DisplayOrder" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                            </div>
                            <div class="flex items-center justify-between">
                                <label class="flex items-center">
                                    <input asp-for="Modules[i].IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                                    <span class="ml-2 text-sm text-gray-700">Aktif</span>
                                </label>
                                <button type="button" onclick="removeModule(this)" class="text-red-600 hover:text-red-800 ml-4">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="mt-8 flex justify-end space-x-3">
            <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                İptal
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Güncelle
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        let moduleIndex = @Model.Modules.Count;

        document.getElementById('addModuleBtn').addEventListener('click', function() {
            addModule();
        });

        function addModule() {
            const modulesList = document.getElementById('modulesList');
            const moduleDiv = document.createElement('div');
            moduleDiv.className = 'border border-gray-200 rounded-lg p-4';
            moduleDiv.innerHTML = `
                <input type="hidden" name="Modules[${moduleIndex}].Id" value="00000000-0000-0000-0000-000000000000" />
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Modül Adı</label>
                        <input name="Modules[${moduleIndex}].Name" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Açıklama</label>
                        <input name="Modules[${moduleIndex}].Description" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Sıralama</label>
                        <input name="Modules[${moduleIndex}].DisplayOrder" type="number" value="0" class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm" />
                    </div>
                    <div class="flex items-center justify-between">
                        <label class="flex items-center">
                            <input name="Modules[${moduleIndex}].IsActive" type="checkbox" value="true" checked class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <span class="ml-2 text-sm text-gray-700">Aktif</span>
                        </label>
                        <button type="button" onclick="removeModule(this)" class="text-red-600 hover:text-red-800 ml-4">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
            `;
            modulesList.appendChild(moduleDiv);
            moduleIndex++;
        }

        function removeModule(button) {
            button.closest('.border').remove();
        }
    </script>
}