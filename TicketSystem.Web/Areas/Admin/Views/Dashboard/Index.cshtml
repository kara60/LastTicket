@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="min-h-screen bg-gray-50">
    <div class="py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <!-- Header -->
            <div class="md:flex md:items-center md:justify-between">
                <div class="flex-1 min-w-0">
                    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                        Admin Dashboard
                    </h2>
                </div>
                <div class="mt-4 flex md:mt-0 md:ml-4">
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                        ✅ Login Başarılı!
                    </span>
                </div>
            </div>

            <!-- Welcome Card -->
            <div class="mt-8">
                <div class="bg-white overflow-hidden shadow rounded-lg">
                    <div class="px-4 py-5 sm:p-6">
                        <h3 class="text-lg leading-6 font-medium text-gray-900">
                            Hoş Geldiniz! 🎉
                        </h3>
                        <div class="mt-4 grid grid-cols-1 gap-4 sm:grid-cols-2">
                            <div>
                                <p class="text-sm text-gray-600">
                                    <strong>Kullanıcı:</strong> @ViewBag.UserName
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>Rol:</strong> @ViewBag.UserRole
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>Kimlik Doğrulandı:</strong> @(ViewBag.IsAuthenticated ? "✅ Evet" : "❌ Hayır")
                                </p>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600">
                                    <strong>Giriş Zamanı:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm")
                                </p>
                                <p class="text-sm text-gray-600">
                                    <strong>Durum:</strong> <span class="text-green-600">Aktif</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Stats -->
            <div class="mt-6">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Hızlı İstatistikler</h3>
                <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4">
                    <!-- Total Tickets -->
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">📊</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Toplam Ticket</dt>
                                        <dd class="text-lg font-medium text-gray-900">@ViewBag.TotalTickets</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Active Tickets -->
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-orange-500 rounded-md flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">🔄</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Aktif Ticket</dt>
                                        <dd class="text-lg font-medium text-gray-900">@ViewBag.ActiveTickets</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Resolved Tickets -->
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">✅</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Çözülen Ticket</dt>
                                        <dd class="text-lg font-medium text-gray-900">@ViewBag.ResolvedTickets</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Closed Tickets -->
                    <div class="bg-white overflow-hidden shadow rounded-lg">
                        <div class="p-5">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <div class="w-8 h-8 bg-gray-500 rounded-md flex items-center justify-center">
                                        <span class="text-white text-sm font-bold">🔒</span>
                                    </div>
                                </div>
                                <div class="ml-5 w-0 flex-1">
                                    <dl>
                                        <dt class="text-sm font-medium text-gray-500 truncate">Kapalı Ticket</dt>
                                        <dd class="text-lg font-medium text-gray-900">@ViewBag.ClosedTickets</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Navigation Links -->
            <div class="mt-8">
                <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Hızlı Erişim</h3>
                <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
                    <a href="/Admin/Tickets" class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl">🎫</span>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-lg font-medium text-gray-900">Ticket Yönetimi</h4>
                                <p class="text-gray-600">Tüm ticket'ları görüntüle ve yönet</p>
                            </div>
                        </div>
                    </a>

                    <a href="/Admin/Users" class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl">👥</span>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-lg font-medium text-gray-900">Kullanıcı Yönetimi</h4>
                                <p class="text-gray-600">Kullanıcıları ekle, düzenle, sil</p>
                            </div>
                        </div>
                    </a>

                    <a href="/Admin/Categories" class="bg-white p-6 rounded-lg shadow hover:shadow-md transition-shadow">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <span class="text-2xl">📂</span>
                            </div>
                            <div class="ml-4">
                                <h4 class="text-lg font-medium text-gray-900">Kategori Yönetimi</h4>
                                <p class="text-gray-600">Ticket kategorilerini düzenle</p>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <!-- Logout -->
            <div class="mt-8 text-center">
                <form method="post" action="/Auth/Logout" class="inline">
                    <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">
                        🚪 Çıkış Yap
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>