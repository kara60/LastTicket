@model IEnumerable<TicketSystem.Domain.Entities.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="flex justify-between items-center mb-6">
    <h2 class="text-2xl font-semibold text-gray-900">Kullanıcılar</h2>
    <a href="@Url.Action("Create")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
        <i class="fas fa-plus mr-2"></i>Yeni Kullanıcı
    </a>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Kullanıcı</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Rol</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Müşteri</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Durum</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">İşlemler</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var user in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center mr-4">
                                    <i class="fas fa-user text-gray-600"></i>
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-gray-900">@user.FirstName @user.LastName</div>
                                    <div class="text-sm text-gray-500">@user.Email</div>
                                    <div class="text-xs text-gray-400">@user.Username</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    @(user.Role == TicketSystem.Domain.Enums.UserRole.Admin ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                @(user.Role == TicketSystem.Domain.Enums.UserRole.Admin ? "Admin" : "Müşteri")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @(user.Customer?.Name ?? "-")
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                                    @(user.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                @(user.IsActive ? "Aktif" : "Pasif")
                            </span>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                            <div class="flex space-x-2">
                                <a href="@Url.Action("Edit", new { id = user.Id })" class="text-blue-600 hover:text-blue-900">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <form method="post" asp-action="ToggleStatus" asp-route-id="@user.Id" class="inline">
                                    <button type="submit" class="@(user.IsActive ? "text-yellow-600 hover:text-yellow-900" : "text-green-600 hover:text-green-900")">
                                        <i class="fas fa-@(user.IsActive ? "pause" : "play")"></i>
                                    </button>
                                </form>

                                <form method="post" asp-action="Delete" asp-route-id="@user.Id" onsubmit="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')" class="inline">
                                    <button type="submit" class="text-red-600 hover:text-red-900">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-12">
        <i class="fas fa-users text-gray-400 text-4xl mb-4"></i>
        <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz kullanıcı yok</h3>
        <p class="text-gray-500 mb-4">İlk kullanıcınızı oluşturun.</p>
        <a href="@Url.Action("Create")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
            <i class="fas fa-plus mr-2"></i>Yeni Kullanıcı
        </a>
    </div>
}