@model IEnumerable<TicketSystem.Domain.Entities.User>
@{
    ViewData["Title"] = "Kullanıcı Yönetimi";
}

<div class="h-screen overflow-hidden bg-gray-50 p-4">
    <div class="max-w-7xl mx-auto h-full flex flex-col">

        <!-- Header Section - Fixed -->
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-900">Kullanıcı Yönetimi</h1>
                <p class="text-gray-600">Sistem kullanıcılarını yönetin, yeni kullanıcı ekleyin ve mevcut kullanıcıları düzenleyin.</p>
            </div>
            <div class="mt-4 sm:mt-0">
                <a href="@Url.Action("Create")"
                   class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-lg transition-colors">
                    <i class="fas fa-plus mr-2"></i>
                    Yeni Kullanıcı
                </a>
            </div>
        </div>

        <!-- Content Area - Scrollable -->
        @if (Model.Any())
        {
            <!-- Stats Cards - Fixed -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <div class="flex items-center">
                        <div class="p-3 bg-blue-100 rounded-lg">
                            <i class="fas fa-users text-blue-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Toplam Kullanıcı</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <div class="flex items-center">
                        <div class="p-3 bg-purple-100 rounded-lg">
                            <i class="fas fa-shield-alt text-purple-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Admin Kullanıcı</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count(u => u.Role == TicketSystem.Domain.Enums.UserRole.Admin)</p>
                        </div>
                    </div>
                </div>

                <div class="bg-white p-4 rounded-xl shadow-sm border border-gray-200">
                    <div class="flex items-center">
                        <div class="p-3 bg-green-100 rounded-lg">
                            <i class="fas fa-user-check text-green-600 text-xl"></i>
                        </div>
                        <div class="ml-4">
                            <p class="text-sm font-medium text-gray-600">Aktif Kullanıcı</p>
                            <p class="text-2xl font-bold text-gray-900">@Model.Count(u => u.IsActive)</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Users Table Container - Scrollable -->
            <div class="flex-1 bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden flex flex-col">
                <!-- Table Header - Fixed -->
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <div class="flex items-center justify-between">
                        <h2 class="text-lg font-semibold text-gray-900">Kullanıcı Listesi</h2>
                        <div class="text-sm text-gray-500">
                            @Model.Count() kullanıcı
                        </div>
                    </div>
                </div>

                <!-- Table Content - Scrollable -->
                <div class="flex-1 overflow-y-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 sticky top-0 border-b border-gray-200">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Kullanıcı
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Rol & Müşteri
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Durum
                                </th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    Son Giriş
                                </th>
                                <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                                    İşlemler
                                </th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var user in Model)
                            {
                                <tr class="hover:bg-gray-50 transition-colors">
                                    <!-- User Info -->
                                    <td class="px-6 py-4">
                                        <div class="flex items-center">
                                            <div class="w-10 h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                                                <span class="text-white font-bold text-sm">
                                                    @(user.FirstName.Substring(0, 1).ToUpper())@(user.LastName.Substring(0, 1).ToUpper())
                                                </span>
                                            </div>
                                            <div class="min-w-0 flex-1">
                                                <div class="text-sm font-medium text-gray-900 truncate">@user.FirstName @user.LastName</div>
                                                <div class="text-sm text-gray-500 truncate flex items-center">
                                                    <i class="fas fa-envelope mr-1 text-xs"></i>
                                                    @user.Email.Value
                                                </div>
                                                <div class="text-xs text-gray-400 truncate flex items-center">
                                                    <i class="fas fa-user mr-1"></i>
                                                    @user.Username
                                                </div>
                                            </div>
                                        </div>
                                    </td>

                                    <!-- Role & Customer -->
                                    <td class="px-6 py-4">
                                        <div class="space-y-1">
                                            <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full @(user.Role == TicketSystem.Domain.Enums.UserRole.Admin ? "bg-purple-100 text-purple-800" : "bg-blue-100 text-blue-800")">
                                                <i class="fas fa-@(user.Role == TicketSystem.Domain.Enums.UserRole.Admin ? "shield-alt" : "user") mr-1"></i>
                                                @(user.Role == TicketSystem.Domain.Enums.UserRole.Admin ? "Admin" : "Müşteri")
                                            </span>
                                            @if (user.Customer != null)
                                            {
                                                <div class="text-xs text-gray-600 flex items-center">
                                                    <i class="fas fa-building mr-1"></i>
                                                    <span class="truncate">@user.Customer.Name</span>
                                                </div>
                                            }
                                        </div>
                                    </td>

                                    <!-- Status -->
                                    <td class="px-6 py-4">
                                        <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded-full @(user.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                            <i class="fas fa-@(user.IsActive ? "check-circle" : "times-circle") mr-1"></i>
                                            @(user.IsActive ? "Aktif" : "Pasif")
                                        </span>
                                    </td>

                                    <!-- Last Login -->
                                    <td class="px-6 py-4 text-sm text-gray-500">
                                        @if (user.LastLoginAt.HasValue)
                                        {
                                            <div class="flex items-center">
                                                <i class="fas fa-clock mr-1"></i>
                                                <span class="truncate">@user.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")</span>
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400">Hiç giriş yapmamış</span>
                                        }
                                    </td>

                                    <!-- Actions -->
                                    <td class="px-6 py-4 text-center">
                                        <div class="flex items-center justify-center space-x-2">
                                            <!-- Edit Button -->
                                            <a href="@Url.Action("Edit", new { id = user.Id })"
                                               class="inline-flex items-center p-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors"
                                               title="Düzenle">
                                                <i class="fas fa-edit text-sm"></i>
                                            </a>

                                            <!-- Toggle Status Button -->
                                            <form method="post" asp-action="ToggleStatus" asp-route-id="@user.Id" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="inline-flex items-center p-2 @(user.IsActive ? "bg-yellow-100 text-yellow-700 hover:bg-yellow-200" : "bg-green-100 text-green-700 hover:bg-green-200") rounded-lg transition-colors"
                                                        title="@(user.IsActive ? "Pasif Et" : "Aktif Et")"
                                                        onclick="return confirm('@(user.IsActive ? "Bu kullanıcıyı pasif etmek istediğinizden emin misiniz?" : "Bu kullanıcıyı aktif etmek istediğinizden emin misiniz?")')">
                                                    <i class="fas fa-@(user.IsActive ? "pause" : "play") text-sm"></i>
                                                </button>
                                            </form>

                                            <!-- Delete Button -->
                                            <form method="post" asp-action="Delete" asp-route-id="@user.Id" class="inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit"
                                                        class="inline-flex items-center p-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors"
                                                        title="Sil"
                                                        onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')">
                                                    <i class="fas fa-trash text-sm"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Table Footer - Fixed -->
                <div class="px-6 py-3 border-t border-gray-200 bg-gray-50">
                    <div class="flex items-center justify-between text-sm text-gray-500">
                        <span>Toplam @Model.Count() kullanıcı gösteriliyor</span>
                        <span>Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="flex-1 bg-white rounded-xl shadow-sm border border-gray-200 flex items-center justify-center">
                <div class="text-center py-12">
                    <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                        <i class="fas fa-users text-gray-400 text-2xl"></i>
                    </div>
                    <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz kullanıcı yok</h3>
                    <p class="text-gray-500 mb-6 max-w-sm mx-auto">
                        Sisteme ilk kullanıcınızı ekleyerek başlayın. Kullanıcılar admin veya müşteri rolünde olabilir.
                    </p>
                    <a href="@Url.Action("Create")"
                       class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 shadow-lg transition-colors">
                        <i class="fas fa-plus mr-2"></i>
                        İlk Kullanıcıyı Oluştur
                    </a>
                </div>
            </div>
        }
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add loading states to form submissions
        const forms = document.querySelectorAll('form');
        forms.forEach(form => {
            form.addEventListener('submit', function(e) {
                const submitBtn = this.querySelector('button[type="submit"]');
                if (submitBtn) {
                    // Store original content
                    const originalContent = submitBtn.innerHTML;

                    // Add loading state
                    submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin text-sm"></i>';
                    submitBtn.disabled = true;

                    // Reset after 5 seconds if something goes wrong
                    setTimeout(() => {
                        if (submitBtn.disabled) {
                            submitBtn.innerHTML = originalContent;
                            submitBtn.disabled = false;
                        }
                    }, 5000);
                }
            });
        });

        // Smooth scrolling for table
        const tableContainer = document.querySelector('.overflow-y-auto');
        if (tableContainer) {
            tableContainer.style.scrollBehavior = 'smooth';
        }
    });
</script>