@model TicketSystem.Web.Areas.Admin.Models.EditUserViewModel
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
    var customers = ViewBag.Customers as IEnumerable<TicketSystem.Domain.Entities.Customer>;
}

<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Kullanıcı Düzenle</h2>
    </div>

    <form method="post" asp-action="Edit" class="p-6">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded"></div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="FirstName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="LastName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Email" type="email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="Username" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <input asp-for="NewPassword" type="password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
                <p class="text-xs text-gray-500 mt-1">Boş bırakılırsa şifre değişmez</p>
            </div>

            <div>
                <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <select asp-for="Role" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500" onchange="toggleCustomerField()">
                    <option value="@TicketSystem.Domain.Enums.UserRole.Admin">Admin</option>
                    <option value="@TicketSystem.Domain.Enums.UserRole.Customer">Müşteri</option>
                </select>
                <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
            </div>

            <div id="customerField" class="@(Model.Role == TicketSystem.Domain.Enums.UserRole.Customer ? "" : "hidden") md:col-span-2">
                <label asp-for="CustomerId" class="block text-sm font-medium text-gray-700 mb-2"></label>
                <select asp-for="CustomerId" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500">
                    <option value="">Müşteri seçiniz</option>
                    @if (customers != null)
                    {
                        @foreach (var customer in customers)
                        {
                            <option value="@customer.Id" @(Model.CustomerId == customer.Id ? "selected" : "")>@customer.Name</option>
                        }
                    }
                </select>
            </div>

            <div class="md:col-span-2">
                <label class="flex items-center">
                    <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <span class="ml-2 text-sm text-gray-700">Aktif</span>
                </label>
            </div>
        </div>

        <div class="mt-6 flex justify-end space-x-3">
            <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                İptal
            </a>
            <button type="submit" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                Güncelle
            </button>
        </div>
    </form>
</div>

<script>
    function toggleCustomerField() {
        const roleSelect = document.querySelector('select[name="Role"]');
        const customerField = document.getElementById('customerField');

        if (roleSelect.value === '@TicketSystem.Domain.Enums.UserRole.Customer') {
            customerField.classList.remove('hidden');
        } else {
            customerField.classList.add('hidden');
        }
    }

    // Initialize on page load
    document.addEventListener('DOMContentLoaded', toggleCustomerField);
</script>