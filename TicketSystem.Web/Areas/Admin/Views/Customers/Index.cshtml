@model IEnumerable<TicketSystem.Domain.Entities.Customer>
@{
    ViewData["Title"] = "Müşteri Yönetimi";
}

<div class="h-screen overflow-hidden bg-gray-50 p-4">
    <div class="max-w-7xl mx-auto h-full flex flex-col">
        <!-- Header - Fixed -->
        <div class="flex items-center justify-between mb-6">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 flex items-center">
                    <i class="fas fa-building text-blue-600 mr-3"></i>
                    Müşteri Yönetimi
                </h1>
                <p class="text-gray-600 mt-1">Müşteri bilgilerini yönetin ve düzenleyin</p>
            </div>
            <div class="flex items-center space-x-3">
                <!-- Search Box -->
                <div class="relative">
                    <input type="text"
                           id="searchInput"
                           placeholder="Müşteri ara..."
                           class="w-80 pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                           autocomplete="off">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="fas fa-search text-gray-400"></i>
                    </div>
                </div>

                <a href="@Url.Action("Create")"
                   class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors flex items-center">
                    <i class="fas fa-plus mr-2"></i>
                    Yeni Müşteri
                </a>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-blue-100 mr-3">
                        <i class="fas fa-building text-blue-600"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Toplam Müşteri</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-green-100 mr-3">
                        <i class="fas fa-check-circle text-green-600"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Aktif Müşteri</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count(c => c.IsActive)</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-yellow-100 mr-3">
                        <i class="fas fa-pause-circle text-yellow-600"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Pasif Müşteri</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Count(c => !c.IsActive)</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100 mr-3">
                        <i class="fas fa-users text-purple-600"></i>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-600">Toplam Kullanıcı</p>
                        <p class="text-2xl font-bold text-gray-900">@Model.Sum(c => c.Users.Count)</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Container - Scrollable -->
        <div class="flex-1 overflow-hidden">
            <div class="bg-white rounded-xl shadow-sm border border-gray-100 h-full flex flex-col">
                <div class="p-6 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900">Müşteri Listesi</h3>
                </div>

                <div class="flex-1 overflow-y-auto">
                    @if (Model.Any())
                    {
                        <table class="w-full">
                            <thead class="bg-gray-50 sticky top-0 z-10">
                                <tr>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Müşteri Bilgileri
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        İletişim
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Kullanıcılar
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Durum
                                    </th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        Oluşturma
                                    </th>
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                                        İşlemler
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                                @foreach (var customer in Model)
                                {
                                    <tr class="hover:bg-gray-50 transition-colors customer-row">
                                        <!-- Müşteri Bilgileri -->
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg flex items-center justify-center mr-3">
                                                    <i class="fas fa-building text-white text-sm"></i>
                                                </div>
                                                <div class="min-w-0 flex-1">
                                                    <div class="text-sm font-medium text-gray-900 customer-name">
                                                        @customer.Name
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(customer.Description))
                                                    {
                                                        <div class="text-sm text-gray-500 truncate max-w-xs">
                                                            @customer.Description
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </td>

                                        <!-- İletişim -->
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="text-sm text-gray-900">
                                                <div class="flex items-center mb-1">
                                                    <i class="fas fa-envelope text-gray-400 mr-2"></i>
                                                    <span class="customer-email">@customer.ContactEmail.Value</span>
                                                </div>
                                                @if (customer.ContactPhone != null)
                                                {
                                                    <div class="flex items-center mb-1">
                                                        <i class="fas fa-phone text-gray-400 mr-2"></i>
                                                        <span class="customer-phone">@customer.ContactPhone.Value</span>
                                                    </div>
                                                }
                                                @if (!string.IsNullOrEmpty(customer.ContactPerson))
                                                {
                                                    <div class="flex items-center">
                                                        <i class="fas fa-user text-gray-400 mr-2"></i>
                                                        <span class="customer-person">@customer.ContactPerson</span>
                                                    </div>
                                                }
                                            </div>
                                        </td>

                                        <!-- Kullanıcılar -->
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <div class="flex items-center">
                                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                                                    <i class="fas fa-users mr-1"></i>
                                                    @customer.Users.Count kullanıcı
                                                </span>
                                            </div>
                                        </td>

                                        <!-- Durum -->
                                        <td class="px-6 py-4 whitespace-nowrap">
                                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium @(customer.IsActive ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                                                <i class="fas fa-@(customer.IsActive ? "check" : "times") mr-1"></i>
                                                @(customer.IsActive ? "Aktif" : "Pasif")
                                            </span>
                                        </td>

                                        <!-- Oluşturma -->
                                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                            <div class="flex flex-col">
                                                <span>@customer.CreatedAt.ToString("dd.MM.yyyy")</span>
                                                <span class="text-xs">@customer.CreatedBy</span>
                                            </div>
                                        </td>

                                        <!-- İşlemler -->
                                        <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                            <div class="flex items-center justify-end space-x-2">
                                                <!-- Edit Button -->
                                                <a href="@Url.Action("Edit", new { id = customer.Id })"
                                                   class="inline-flex items-center p-2 bg-blue-100 text-blue-700 rounded-lg hover:bg-blue-200 transition-colors"
                                                   title="Düzenle">
                                                    <i class="fas fa-edit text-sm"></i>
                                                </a>

                                                <!-- Toggle Status Button -->
                                                <form method="post" action="@Url.Action("ToggleStatus", "Customers", new { area = "Admin", id = customer.Id })" class="inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="inline-flex items-center p-2 @(customer.IsActive ? "bg-yellow-100 text-yellow-700 hover:bg-yellow-200" : "bg-green-100 text-green-700 hover:bg-green-200") rounded-lg transition-colors"
                                                            title="@(customer.IsActive ? "Pasif Et" : "Aktif Et")"
                                                            onclick="return confirm('@(customer.IsActive ? "Bu müşteriyi pasif etmek istediğinizden emin misiniz?" : "Bu müşteriyi aktif etmek istediğinizden emin misiniz?")')">
                                                        <i class="fas fa-@(customer.IsActive ? "pause" : "play") text-sm"></i>
                                                    </button>
                                                </form>

                                                <!-- Delete Button -->
                                                <form method="post" action="/Admin/Customers/Delete/@customer.Id" class="inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit"
                                                            class="inline-flex items-center p-2 bg-red-100 text-red-700 rounded-lg hover:bg-red-200 transition-colors"
                                                            title="Sil"
                                                            onclick="return confirm('Bu müşteriyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')">
                                                        <i class="fas fa-trash text-sm"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-12">
                            <div class="w-24 h-24 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-4">
                                <i class="fas fa-building text-gray-400 text-3xl"></i>
                            </div>
                            <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz müşteri yok</h3>
                            <p class="text-gray-500 mb-6 max-w-sm mx-auto">
                                İlk müşterinizi oluşturun ve sistem kullanıcılarının farklı müşterilere bağlı olarak çalışabilmesini sağlayın.
                            </p>
                            <a href="@Url.Action("Create")"
                               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                                <i class="fas fa-plus mr-2"></i>İlk Müşteriyi Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Search Functionality -->
<script>
    document.getElementById('searchInput').addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        const rows = document.querySelectorAll('.customer-row');

        rows.forEach(row => {
            const name = row.querySelector('.customer-name').textContent.toLowerCase();
            const email = row.querySelector('.customer-email').textContent.toLowerCase();
            const phone = row.querySelector('.customer-phone')?.textContent.toLowerCase() || '';
            const person = row.querySelector('.customer-person')?.textContent.toLowerCase() || '';

            if (name.includes(searchTerm) ||
                email.includes(searchTerm) ||
                phone.includes(searchTerm) ||
                person.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>