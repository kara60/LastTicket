@model TicketSystem.Application.Common.Models.PaginatedList<TicketSystem.Application.Features.Tickets.DTOs.TicketListDto>
@{
    ViewData["Title"] = "Ticket Yönetimi";
}

<!-- Header -->
<div class="bg-white border-b border-gray-200 px-6 py-4 mb-6">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Ticket Yönetimi</h1>
            <p class="text-sm text-gray-600 mt-1">Tüm ticket'ları yönetin ve takip edin</p>
        </div>
        <div class="bg-blue-50 rounded-lg px-4 py-2">
            <div class="text-sm font-medium text-blue-900">@Model.TotalCount Toplam Ticket</div>
        </div>
    </div>
</div>

<!-- Compact Filters -->
<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-6">
    <form method="get" class="flex flex-wrap items-center gap-4">
        <!-- Arama -->
        <div class="flex-1 min-w-64">
            <div class="relative">
                <i class="fas fa-search absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 text-sm"></i>
                <input type="text" name="SearchTerm" value="@Context.Request.Query["SearchTerm"]"
                       placeholder="Ticket no, başlık veya açıklama ara..."
                       class="w-full pl-10 pr-4 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            </div>
        </div>

        <!-- Durum -->
        <div>
            <select name="Status" class="px-3 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                <option value="">Tüm Durumlar</option>
                <option value="İnceleniyor" @(Context.Request.Query["Status"] == "İnceleniyor" ? "selected" : "")>İnceleniyor</option>
                <option value="İşlemde" @(Context.Request.Query["Status"] == "İşlemde" ? "selected" : "")>İşlemde</option>
                <option value="Çözüldü" @(Context.Request.Query["Status"] == "Çözüldü" ? "selected" : "")>Çözüldü</option>
                <option value="Kapandı" @(Context.Request.Query["Status"] == "Kapandı" ? "selected" : "")>Kapandı</option>
            </select>
        </div>

        <!-- Sayfa Boyutu -->
        <div>
            <select name="PageSize" class="px-3 py-2.5 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white">
                <option value="10" @(Context.Request.Query["PageSize"] == "10" ? "selected" : "")>10</option>
                <option value="25" @(Context.Request.Query["PageSize"] == "25" ? "selected" : "")>25</option>
                <option value="50" @(Context.Request.Query["PageSize"] == "50" ? "selected" : "")>50</option>
            </select>
        </div>

        <!-- Filtrele Butonu -->
        <button type="submit" class="inline-flex items-center px-4 py-2.5 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
            <i class="fas fa-filter mr-2"></i>Filtrele
        </button>

        <!-- Temizle -->
        <a href="@Url.Action("Index")" class="inline-flex items-center px-3 py-2.5 text-sm text-gray-600 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            <i class="fas fa-times mr-2"></i>Temizle
        </a>
    </form>
</div>

@if (Model.Items.Any())
{
    <!-- Modern Cards Layout -->
    <div class="space-y-3">
        @foreach (var ticket in Model.Items)
        {
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition-shadow">
                <div class="p-4">
                    <div class="flex items-center justify-between">
                        <!-- Left: Ticket Info -->
                        <div class="flex items-center space-x-4 flex-1">
                            <!-- Status Indicator -->
                            <div class="flex-shrink-0">
                                <div class="w-3 h-3 rounded-full" style="background-color: @ticket.TypeColor"></div>
                            </div>

                            <!-- Main Info -->
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center space-x-3 mb-1">
                                    <h3 class="text-sm font-semibold text-gray-900">@ticket.TicketNumber</h3>
                                    <span class="inline-flex items-center px-2 py-0.5 text-xs font-medium rounded-full
                                                @(ticket.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                                                                    ticket.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                                                                    ticket.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                                                                    "bg-gray-100 text-gray-800")">
                                @ticket.StatusDisplay
                            </span>
                        </div>

                                <p class="text-sm text-gray-900 truncate" title="@ticket.Title">@ticket.Title</p>

                                <div class="flex items-center space-x-4 mt-2 text-xs text-gray-500">
                                    <span class="flex items-center">
                                        <i class="fas fa-tag mr-1"></i>
                                        @ticket.TypeName
                                    </span>
                                    <span class="flex items-center">
                                        <i class="fas fa-building mr-1"></i>
                                        @ticket.CustomerName
                                    </span>
                                    <span class="flex items-center">
                                        <i class="fas fa-clock mr-1"></i>
                                        @ticket.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                            @if (ticket.CommentCount > 0)
                                    {
                                        <span class="flex items-center">
                                            <i class="fas fa-comment mr-1"></i>
                                            @ticket.CommentCount yorum
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Right: Actions -->
                        <div class="flex items-center space-x-2">
                            <a href="@Url.Action("Details", new { id = ticket.Id })"
                               class="inline-flex items-center px-3 py-1.5 text-xs font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 transition-colors">
                                <i class="fas fa-eye mr-1"></i>
                                Detay
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Compact Pagination -->
    @if (Model.TotalPages > 1)
    {
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 mt-6 p-4">
            <div class="flex items-center justify-between">
                <div class="text-sm text-gray-600">
                    @((Model.PageNumber - 1) * Model.PageSize + 1)-@(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount))
                    / @Model.TotalCount kayıt
                </div>

                <div class="flex items-center space-x-1">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="?Page=@(Model.PageNumber - 1)&@Context.Request.QueryString.Value?.Replace($"Page={Model.PageNumber}", "").TrimStart('&')"
                           class="px-2 py-1 text-xs bg-white border border-gray-300 rounded hover:bg-gray-50">
                            <i class="fas fa-chevron-left"></i>
                        </a>
                    }

                    @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.TotalPages, Model.PageNumber + 2); i++)
                    {
                        <a href="?Page=@i&@Context.Request.QueryString.Value?.Replace($"Page={Model.PageNumber}", "").TrimStart('&')"
                           class="px-2 py-1 text-xs @(i == Model.PageNumber ? "bg-blue-600 text-white" : "bg-white text-gray-700 hover:bg-gray-50") border border-gray-300 rounded font-medium">
                            @i
                        </a>
                    }

                    @if (Model.HasNextPage)
                    {
                        <a href="?Page=@(Model.PageNumber + 1)&@Context.Request.QueryString.Value?.Replace($"Page={Model.PageNumber}", "").TrimStart('&')"
                           class="px-2 py-1 text-xs bg-white border border-gray-300 rounded hover:bg-gray-50">
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    }
}
else
{
    <!-- Empty State -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-8 text-center">
        <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <i class="fas fa-ticket-alt text-gray-400 text-2xl"></i>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">Ticket bulunamadı</h3>
        <p class="text-gray-600 mb-4">Aradığınız kriterlere uygun ticket bulunamadı.</p>
        <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
            <i class="fas fa-refresh mr-2"></i>Filtreleri Temizle
        </a>
    </div>
}