<!-- Areas/Admin/Views/Tickets/Details.cshtml -->
@model TicketSystem.Application.Features.Tickets.DTOs.TicketDto
@{
    ViewData["Title"] = $"Ticket Detayı - {Model.TicketNumber}";
}

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
        <!-- Ticket Info -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <div class="flex items-center justify-between">
                    <h2 class="text-xl font-semibold text-gray-900">@Model.Title</h2>
                    <span class="inline-flex px-3 py-1 text-sm font-semibold rounded-full
                        @(Model.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                                    Model.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                                    Model.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                                    "bg-gray-100 text-gray-800")">
                        @Model.StatusDisplay
                    </span>
                </div>
                <div class="mt-2 flex items-center text-sm text-gray-500">
                    <span class="font-medium">@Model.TicketNumber</span>
                    <span class="mx-2">•</span>
                    <span>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                    <span class="mx-2">•</span>
                    <span>@Model.CreatedBy.FullName</span>
                </div>
            </div>

            <div class="px-6 py-4">
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="mb-6">
                        <h3 class="text-sm font-medium text-gray-700 mb-2">Açıklama</h3>
                        <p class="text-gray-900 whitespace-pre-wrap">@Model.Description</p>
                    </div>
                }

                <!-- Dynamic Form Data -->
                @if (Model.FormData.Any())
                {
                    <div class="mb-6">
                        <h3 class="text-sm font-medium text-gray-700 mb-3">Form Verileri</h3>
                        <div class="bg-gray-50 rounded-lg p-4">
                            @foreach (var field in Model.FormData)
                            {
                                <div class="mb-3 last:mb-0">
                                    <dt class="text-sm font-medium text-gray-600">@field.Key</dt>
                                    <dd class="text-sm text-gray-900 mt-1">@field.Value</dd>
                                </div>
                            }
                        </div>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.SelectedModule))
                {
                    <div class="mb-6">
                        <h3 class="text-sm font-medium text-gray-700 mb-2">Seçilen Modül</h3>
                        <span class="inline-flex px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded">
                            @Model.SelectedModule
                        </span>
                    </div>
                }
            </div>
        </div>

        <!-- Comments -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Yorumlar (@Model.Comments.Count)</h3>
            </div>

            <div class="px-6 py-4">
                <!-- Add Comment Form -->
                <form method="post" asp-action="AddComment" class="mb-6">
                    <input type="hidden" name="ticketId" value="@Model.Id" />
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-2">Yeni Yorum</label>
                        <textarea name="content" rows="3" required
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                                  placeholder="Yorumunuzu yazın..."></textarea>
                    </div>
                    <div class="flex items-center justify-between">
                        <label class="flex items-center">
                            <input type="checkbox" name="isInternal" value="true" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <span class="ml-2 text-sm text-gray-700">İç not (sadece adminler görebilir)</span>
                        </label>
                        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                            <i class="fas fa-paper-plane mr-2"></i>Yorum Ekle
                        </button>
                    </div>
                </form>

                <!-- Comments List -->
                @if (Model.Comments.Any())
                {
                    <div class="space-y-4">
                        @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreatedAt))
                        {
                            <div class="border border-gray-200 rounded-lg p-4 @(comment.IsInternal ? "bg-yellow-50 border-yellow-200" : "")">
                                <div class="flex items-center justify-between mb-2">
                                    <div class="flex items-center">
                                        <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center mr-3">
                                            <i class="fas fa-user text-gray-600 text-sm"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm font-medium text-gray-900">@comment.User.FullName</p>
                                            <p class="text-xs text-gray-500">@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                                        </div>
                                    </div>
                                    @if (comment.IsInternal)
                                    {
                                        <span class="inline-flex px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded">
                                            İç Not
                                        </span>
                                    }
                                </div>
                                <p class="text-gray-900 whitespace-pre-wrap">@comment.Content</p>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8 text-gray-500">
                        <i class="fas fa-comment-slash text-2xl mb-2"></i>
                        <p>Henüz yorum yapılmamış.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
        <!-- Status Actions -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Durum İşlemleri</h3>
            </div>
            <div class="px-6 py-4 space-y-3">
                @if (Model.Status == TicketSystem.Domain.Enums.TicketStatus.Inceleniyor)
                {
                    <form method="post" asp-action="UpdateStatus" class="space-y-3">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="Islenmede" />

                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Onay Notu</label>
                            <textarea name="comment" rows="2"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm"
                                  placeholder="Onay notu (isteğe bağlı)"></textarea>
                        </div>

                        <div class="flex items-center">
                            <input type="checkbox" name="sendToPmo" value="true" id="sendToPmo" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label for="sendToPmo" class="ml-2 text-sm text-gray-700">PMO'ya gönder</label>
                        </div>

                        <button type="submit" class="w-full bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">
                            <i class="fas fa-check mr-2"></i>Onayla
                        </button>
                    </form>

                    <form method="post" asp-action="UpdateStatus">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="Kapatildi" />
                        <button type="submit" class="w-full bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700">
                            <i class="fas fa-times mr-2"></i>Reddet
                        </button>
                    </form>
                }
                else if (Model.Status == TicketSystem.Domain.Enums.TicketStatus.Islenmede)
                {
                    <form method="post" asp-action="UpdateStatus">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="Cozuldu" />
                        <div class="mb-3">
                            <label class="block text-sm font-medium text-gray-700 mb-1">Çözüm Notu</label>
                            <textarea name="comment" rows="2"
                                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm"
                                  placeholder="Çözüm açıklaması"></textarea>
                        </div>
                        <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">
                            <i class="fas fa-check-circle mr-2"></i>Çözüldü Olarak İşaretle
                        </button>
                    </form>
                }
                else if (Model.Status == TicketSystem.Domain.Enums.TicketStatus.Cozuldu)
                {
                    <form method="post" asp-action="UpdateStatus">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <input type="hidden" name="newStatus" value="Kapatildi" />
                        <button type="submit" class="w-full bg-gray-600 text-white px-4 py-2 rounded-md hover:bg-gray-700">
                            <i class="fas fa-archive mr-2"></i>Ticket'ı Kapat
                        </button>
                    </form>
                }
            </div>
        </div>

        <!-- Ticket Info -->
        <div class="bg-white rounded-lg shadow">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Ticket Bilgileri</h3>
            </div>
            <div class="px-6 py-4 space-y-3">
                <div>
                    <dt class="text-sm font-medium text-gray-600">Tür</dt>
                    <dd class="text-sm text-gray-900 mt-1 flex items-center">
                        <div class="w-3 h-3 rounded-full mr-2" style="background-color: @Model.Type.Color"></div>
                        @Model.Type.Name
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600">Kategori</dt>
                    <dd class="text-sm text-gray-900 mt-1 flex items-center">
                        <div class="w-3 h-3 rounded-full mr-2" style="background-color: @Model.Category.Color"></div>
                        @Model.Category.Name
                    </dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600">Müşteri</dt>
                    <dd class="text-sm text-gray-900 mt-1">@Model.Customer.Name</dd>
                </div>

                <div>
                    <dt class="text-sm font-medium text-gray-600">Oluşturan</dt>
                    <dd class="text-sm text-gray-900 mt-1">@Model.CreatedBy.FullName</dd>
                </div>

                @if (Model.AssignedTo != null)
                {
                    <div>
                        <dt class="text-sm font-medium text-gray-600">Atanan</dt>
                        <dd class="text-sm text-gray-900 mt-1">@Model.AssignedTo.FullName</dd>
                    </div>
                }

                <div>
                    <dt class="text-sm font-medium text-gray-600">Son Güncelleme</dt>
                    <dd class="text-sm text-gray-900 mt-1">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                </div>
            </div>
        </div>

        <!-- Attachments -->
        @if (Model.Attachments.Any())
        {
            <div class="bg-white rounded-lg shadow">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-medium text-gray-900">Dosyalar (@Model.Attachments.Count)</h3>
                </div>
                <div class="px-6 py-4">
                    <div class="space-y-2">
                        @foreach (var attachment in Model.Attachments)
                        {
                            <div class="flex items-center justify-between p-2 border border-gray-200 rounded">
                                <div class="flex items-center">
                                    <i class="fas fa-file text-gray-400 mr-2"></i>
                                    <span class="text-sm text-gray-900">@attachment.FileName</span>
                                </div>
                                <span class="text-xs text-gray-500">@((attachment.FileSize / 1024).ToString("N0")) KB</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Back Button -->
<div class="mt-6">
    <a href="@Url.Action("Index")" class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
        <i class="fas fa-arrow-left mr-2"></i>Geri Dön
    </a>
</div>