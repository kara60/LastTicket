@model TicketSystem.Application.Features.Tickets.DTOs.TicketDto
@{
    ViewData["Title"] = $"#{Model.TicketNumber}";
}

<!-- Compact Header -->
<div class="bg-white border-b border-gray-200 mb-4">
    <div class="p-4">
        <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
                <a href="@Url.Action("Index")"
                   class="inline-flex items-center px-3 py-1 text-sm border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50">
                    <i class="fas fa-arrow-left mr-1"></i> Geri
                </a>
                <div>
                    <h1 class="text-lg font-bold text-gray-900">#@Model.TicketNumber</h1>
                    <p class="text-xs text-gray-500">@Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
                </div>
            </div>

            <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full
                @(Model.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                    Model.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                    Model.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                    "bg-gray-100 text-gray-800")">
                @switch (Model.StatusDisplay)
                {
                    case "İnceleniyor":
                        <i class="fas fa-clock mr-1"></i>
                        break;
                    case "İşlemde":

                        <i class="fas fa-cog mr-1"></i>
                        break;
                    case "Çözüldü":

                        <i class="fas fa-check mr-1"></i>
                        break;
                    default:

                        <i class="fas fa-times mr-1"></i>
                        break;
                }
                @Model.StatusDisplay
            </span>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-4">
    <!-- Main Content - 3/4 width -->
    <div class="lg:col-span-3 space-y-4">

        <!-- Ticket Content -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <!-- Title & Meta -->
            <div class="p-4 border-b border-gray-200 bg-gray-50">
                <h2 class="text-lg font-bold text-gray-900 mb-2">@Model.Title</h2>
                <div class="flex flex-wrap items-center gap-4 text-sm">
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full mr-1" style="background-color: @Model.Type.Color"></div>
                        <span class="font-medium">@Model.Type.Name</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-3 h-3 rounded-full mr-1" style="background-color: @Model.Category.Color"></div>
                        <span class="font-medium">@Model.Category.Name</span>
                    </div>
                    <span class="text-gray-500">@User.Identity.Name</span>
                </div>
            </div>

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="p-4 border-b border-gray-200">
                    <h3 class="text-sm font-semibold text-gray-900 mb-2 flex items-center">
                        <i class="fas fa-align-left mr-1 text-gray-600"></i> Açıklama
                    </h3>
                    <div class="text-sm text-gray-800 whitespace-pre-wrap">@Model.Description</div>
                </div>
            }

            <!-- Form Data - Fixed to show values -->
            @if (Model.FormData != null && Model.FormData.Any())
            {
                <div class="p-4 border-b border-gray-200">
                    <h3 class="text-sm font-semibold text-gray-900 mb-3 flex items-center">
                        <i class="fas fa-list-ul mr-1 text-gray-600"></i> Detay Bilgileri
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        @foreach (var field in Model.FormData)
                        {
                            <div class="bg-gray-50 rounded-lg p-3">
                                <div class="text-xs font-medium text-gray-600 mb-1">@field.Key</div>
                                <div class="text-sm text-gray-900">
                                    @if (field.Value?.ToString()?.ToLower() == "true")
                                    {
                                        <span class="inline-flex items-center px-2 py-0.5 text-xs bg-green-100 text-green-800 rounded">
                                            <i class="fas fa-check mr-1"></i>Evet
                                        </span>
                                    }
                                    else if (field.Value?.ToString()?.ToLower() == "false")
                                    {
                                        <span class="inline-flex items-center px-2 py-0.5 text-xs bg-red-100 text-red-800 rounded">
                                            <i class="fas fa-times mr-1"></i>Hayır
                                        </span>
                                    }
                                    else if (!string.IsNullOrEmpty(field.Value?.ToString()))
                                    {
                                        <span class="font-medium">@field.Value</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400 italic">Belirtilmemiş</span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Comments Section -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-comments mr-2 text-blue-600"></i>
                    Yorumlar
                    <span class="ml-2 inline-flex items-center px-2 py-0.5 text-xs bg-blue-100 text-blue-800 rounded-full">
                        @Model.Comments.Where(c => !c.IsInternal).Count()
                    </span>
                </h3>
            </div>

            <div class="p-4">
                <!-- Add Comment Form -->
                @if (Model.Status != TicketSystem.Domain.Enums.TicketStatus.Kapandı)
                {
                    <form method="post" action="/Customer/Tickets/AddComment" class="mb-6">
                        <input type="hidden" name="ticketId" value="@Model.Id" />
                        <div class="bg-gray-50 rounded-lg p-4">
                            <div class="mb-3">
                                <textarea name="content" rows="3" required
                                      class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-1 focus:ring-blue-500 focus:border-blue-500 resize-vertical"
                                      placeholder="Yorumunuzu yazın..."></textarea>
                            </div>
                            <div class="flex justify-end">
                                <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm font-medium">
                                    <i class="fas fa-paper-plane mr-1"></i> Gönder
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="bg-amber-50 border border-amber-200 rounded-lg p-3 mb-4">
                        <div class="flex items-center text-sm">
                            <i class="fas fa-lock text-amber-600 mr-2"></i>
                            <p class="text-amber-800">Bu ticket kapatıldığı için yorum ekleyemezsiniz.</p>
                        </div>
                    </div>
                }

                <!-- Comments List -->
                @{
                    var publicComments = Model.Comments.Where(c => !c.IsInternal).OrderByDescending(c => c.CreatedAt);
                }

                @if (publicComments.Any())
                {
                    <div class="space-y-4">
                        @foreach (var comment in publicComments)
                        {
                            var commentUser = comment.User.Role == "Admin" ? "Admin" : "Müşteri";
                            
                            <div class="border border-gray-200 rounded-lg p-4">
                                <div class="flex items-start justify-between">
                                    <div class="w-8 h-8 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center mr-3">
                                        <span class="text-white font-medium text-sm">
                                            @comment.User.FullName.Substring(0, 1).ToUpper()
                                        </span>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex items-center justify-between mb-2">
                                            <div>
                                                <h4 class="text-sm font-semibold text-gray-900">@comment.User.FullName</h4>
                                                <p class="text-xs text-gray-500">@comment.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
                                            </div>
                                            <span class="inline-flex items-center px-2 py-0.5 text-xs bg-blue-100 text-blue-800 rounded">
                                                @if (@comment.User.Role == "Admin")
                                                {

                                                }
                                                <i class="fas fa-user mr-1"></i> @commentUser
                                            </span>
                                        </div>
                                        <div class="text-sm text-gray-800 whitespace-pre-wrap">@comment.Content</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-8">
                        <div class="w-12 h-12 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-3">
                            <i class="fas fa-comment-slash text-gray-400"></i>
                        </div>
                        <h3 class="text-sm font-semibold text-gray-900 mb-1">Henüz Yorum Yok</h3>
                        <p class="text-xs text-gray-600">Bu ticket için henüz hiç yorum yapılmamış.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Compact Sidebar - 1/4 width -->
    <div class="space-y-4">

        <!-- Ticket Info -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-3 border-b border-gray-200 bg-gray-50">
                <h3 class="text-sm font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-info-circle mr-1 text-blue-600"></i> Ticket Bilgileri
                </h3>
            </div>
            <div class="p-3 space-y-3 text-xs">
                <div>
                    <div class="text-gray-600 mb-1">Durum</div>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium rounded
                        @(Model.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                                    Model.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                                    Model.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                                    "bg-gray-100 text-gray-800")">
                        @Model.StatusDisplay
                    </span>
                </div>

                <div>
                    <div class="text-gray-600 mb-1">Tür</div>
                    <div class="flex items-center">
                        <div class="w-2 h-2 rounded-full mr-1" style="background-color: @Model.Type.Color"></div>
                        <span class="text-gray-900 font-medium">@Model.Type.Name</span>
                    </div>
                </div>

                <div>
                    <div class="text-gray-600 mb-1">Kategori</div>
                    <div class="flex items-center">
                        <div class="w-2 h-2 rounded-full mr-1" style="background-color: @Model.Category.Color"></div>
                        <span class="text-gray-900 font-medium">@Model.Category.Name</span>
                    </div>
                </div>

                <div class="border-t border-gray-200 pt-3">
                    <div class="space-y-2">
                        <div>
                            <div class="text-gray-600">Oluşturulma</div>
                            <div class="text-gray-900 font-medium">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                        <div>
                            <div class="text-gray-600">Son Güncelleme</div>
                            <div class="text-gray-900 font-medium">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Progress -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 rounded-lg p-3">
            <h4 class="text-sm font-semibold text-blue-900 mb-3 flex items-center">
                <i class="fas fa-info-circle mr-1"></i> Durum Rehberi
            </h4>
            <div class="space-y-2 text-xs">
                @switch (Model.Status)
                {
                    case TicketSystem.Domain.Enums.TicketStatus.İnceleniyor:
                        <div class="flex items-start">
                            <div class="w-1.5 h-1.5 bg-yellow-500 rounded-full mt-1 mr-2"></div>
                            <div>
                                <p class="font-medium text-blue-900">Şu Anda:</p>
                                <p class="text-blue-800">İnceleniyor</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="w-1.5 h-1.5 bg-blue-500 rounded-full mt-1 mr-2"></div>
                            <div>
                                <p class="font-medium text-blue-900">Sonraki:</p>
                                <p class="text-blue-800">1-2 saat içinde yanıt</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.İşlemde:
                        <div class="flex items-start">
                            <div class="w-1.5 h-1.5 bg-blue-500 rounded-full mt-1 mr-2"></div>
                            <div>
                                <p class="font-medium text-blue-900">Şu Anda:</p>
                                <p class="text-blue-800">İşlemde</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.Çözüldü:
                        <div class="flex items-start">
                            <div class="w-1.5 h-1.5 bg-green-500 rounded-full mt-1 mr-2"></div>
                            <div>
                                <p class="font-medium text-blue-900">Tamamlandı:</p>
                                <p class="text-blue-800">Başarıyla çözüldü</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.Kapandı:
                        <div class="flex items-start">
                            <div class="w-1.5 h-1.5 bg-gray-500 rounded-full mt-1 mr-2"></div>
                            <div>
                                <p class="font-medium text-blue-900">Kapatıldı:</p>
                                <p class="text-blue-800">İşlem tamamlandı</p>
                            </div>
                        </div>
                        break;
                }
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200">
            <div class="p-3 border-b border-gray-200 bg-gray-50">
                <h4 class="text-sm font-semibold text-gray-900">Hızlı İşlemler</h4>
            </div>
            <div class="p-3 space-y-2">
                <a href="@Url.Action("Create")"
                   class="flex items-center w-full px-3 py-2 bg-blue-50 text-blue-700 rounded-lg hover:bg-blue-100 text-xs">
                    <i class="fas fa-plus mr-2"></i> Yeni Ticket
                </a>
                <a href="@Url.Action("Index")"
                   class="flex items-center w-full px-3 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 text-xs">
                    <i class="fas fa-list mr-2"></i> Tüm Ticket'lar
                </a>
                <button onclick="window.print()"
                        class="flex items-center w-full px-3 py-2 bg-gray-50 text-gray-700 rounded-lg hover:bg-gray-100 text-xs">
                    <i class="fas fa-print mr-2"></i> Yazdır
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Comment form handling
            const commentForm = document.querySelector('form[action="/Customer/Tickets/AddComment"]');
            if (commentForm) {
                commentForm.addEventListener('submit', function(e) {
                    const content = commentForm.querySelector('textarea[name="content"]').value;

                    if (!content || content.trim() === '') {
                        e.preventDefault();
                        alert('Yorum içeriği boş olamaz!');
                        return false;
                    }

                    // Loading state
                    const submitBtn = commentForm.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<div class="flex items-center"><div class="animate-spin rounded-full h-3 w-3 border-2 border-white border-t-transparent mr-2"></div>Gönderiliyor...</div>';
                    }
                });
            }

            // Auto-resize textarea
            const textarea = document.querySelector('textarea[name="content"]');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = (this.scrollHeight) + 'px';
                });
            }
        });
    </script>

    <style>
        @@media print {
            .no-print

        {
            display: none !important;
        }

        body {
            font-size: 11pt;
        }

        .bg-gradient-to-br, .bg-gradient-to-r {
            background: #f8f9fa !important;
        }

        }

        .hover\:shadow-md:hover {
            transform: translateY(-1px);
        }

        textarea::-webkit-scrollbar {
            width: 6px;
        }

        textarea::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 3px;
        }

        textarea::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 3px;
        }

            textarea::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }
    </style>
}