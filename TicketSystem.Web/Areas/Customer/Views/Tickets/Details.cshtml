@model TicketSystem.Application.Features.Tickets.DTOs.TicketDto
@{
    ViewData["Title"] = $"Ticket #{Model.TicketNumber}";
}

<!-- Header -->
<div class="bg-white border-b border-gray-200 mb-6">
    <div class="px-6 py-6">
        <div class="flex items-center justify-between">
            <!-- Back Navigation -->
            <div class="flex items-center space-x-4">
                <a href="@Url.Action("Index")"
                   class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-xl text-gray-700 hover:bg-gray-50 transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Geri Dön
                </a>
                <div class="h-6 w-px bg-gray-300"></div>
                <div>
                    <h1 class="text-2xl font-bold text-gray-900">Ticket #@Model.TicketNumber</h1>
                    <p class="text-sm text-gray-600">@Model.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
                </div>
            </div>

            <!-- Status Badge -->
            <div class="flex items-center space-x-4">
                <span class="inline-flex items-center px-4 py-2 text-sm font-semibold rounded-full
                    @(Model.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                            Model.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                            Model.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                            "bg-gray-100 text-gray-800")">
                    @switch (Model.StatusDisplay)
                    {
                        case "İnceleniyor":
                            <i class="fas fa-clock mr-2"></i>
                            break;
                        case "İşlemde":
                            <i class="fas fa-cog mr-2"></i>
                            break;
                        case "Çözüldü":
                            <i class="fas fa-check mr-2"></i>
                            break;
                        default:
                            <i class="fas fa-times mr-2"></i>
                            break;
                    }
                    @Model.StatusDisplay
                </span>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 xl:grid-cols-4 gap-6">
    <!-- Main Content - Takes 3/4 of the width -->
    <div class="xl:col-span-3 space-y-6">

        <!-- Ticket Content -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100">
            <!-- Ticket Header -->
            <div class="px-6 py-6 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-gray-100">
                <h2 class="text-2xl font-bold text-gray-900 mb-3">@Model.Title</h2>

                <!-- Metadata -->
                <div class="flex flex-wrap items-center gap-6 text-sm">
                    <div class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-2" style="background-color: @Model.Type.Color"></div>
                        <span class="text-gray-600">Tür:</span>
                        <span class="font-medium text-gray-900 ml-1">@Model.Type.Name</span>
                    </div>
                    <div class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-2" style="background-color: @Model.Category.Color"></div>
                        <span class="text-gray-600">Kategori:</span>
                        <span class="font-medium text-gray-900 ml-1">@Model.Category.Name</span>
                    </div>
                    <div class="flex items-center">
                        <i class="fas fa-user text-gray-400 mr-2"></i>
                        <span class="text-gray-600">Oluşturan:</span>
                        <span class="font-medium text-gray-900 ml-1">@User.Identity.Name</span>
                    </div>
                </div>
            </div>

            <!-- Description -->
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <div class="px-6 py-6 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                        <i class="fas fa-align-left mr-2 text-gray-600"></i>
                        Açıklama
                    </h3>
                    <div class="prose max-w-none">
                        <p class="text-gray-800 leading-relaxed whitespace-pre-wrap">@Model.Description</p>
                    </div>
                </div>
            }

            <!-- Form Data -->
            @if (Model.FormData != null && Model.FormData.Any())
            {
                <div class="px-6 py-6 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-list-ul mr-2 text-gray-600"></i>
                        Detay Bilgileri
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        @foreach (var field in Model.FormData)
                        {
                            <div class="bg-gray-50 rounded-xl p-4">
                                <dt class="text-sm font-semibold text-gray-600 mb-2">@field.Key</dt>
                                <dd class="text-gray-900">
                                    @if (field.Value?.ToString()?.ToLower() == "true")
                                    {
                                        <span class="inline-flex items-center px-3 py-1 text-sm font-medium bg-green-100 text-green-800 rounded-full">
                                            <i class="fas fa-check mr-2"></i>Evet
                                        </span>
                                    }
                                    else if (field.Value?.ToString()?.ToLower() == "false")
                                    {
                                        <span class="inline-flex items-center px-3 py-1 text-sm font-medium bg-red-100 text-red-800 rounded-full">
                                            <i class="fas fa-times mr-2"></i>Hayır
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-sm font-medium text-gray-900">@field.Value</span>
                                    }
                                </dd>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Comments Section -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-xl font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-comments mr-3 text-blue-600"></i>
                    Yorumlar
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                        @Model.Comments.Where(c => !c.IsInternal).Count()
                    </span>
                </h3>
            </div>

            <div class="px-6 py-6">
                <!-- Add Comment Form -->
                @if (Model.Status != TicketSystem.Domain.Enums.TicketStatus.Kapandı)
                {
                    <form method="post" asp-action="AddComment" class="mb-8">
                        <input type="hidden" name="ticketId" value="@Model.Id" />

                        <div class="bg-gray-50 rounded-xl p-6">
                            <h4 class="text-lg font-semibold text-gray-900 mb-4">Yorum Ekle</h4>
                            <div class="mb-4">
                                <textarea name="content" rows="4" required
                                      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all resize-vertical"
                                      placeholder="Yorumunuzu buraya yazın..."></textarea>
                            </div>
                            <div class="flex justify-end">
                                <button type="submit" class="inline-flex items-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-xl hover:from-blue-700 hover:to-indigo-700 transition-all duration-200 shadow-md hover:shadow-lg font-medium">
                                    <i class="fas fa-paper-plane mr-2"></i>
                                    Yorum Gönder
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="bg-amber-50 border border-amber-200 rounded-xl p-4 mb-6">
                        <div class="flex items-center">
                            <i class="fas fa-lock text-amber-600 mr-3"></i>
                            <p class="text-sm text-amber-800 font-medium">Bu ticket kapatıldığı için yorum ekleyemezsiniz.</p>
                        </div>
                    </div>
                }

                <!-- Comments List -->
                @{
                    var publicComments = Model.Comments.Where(c => !c.IsInternal).OrderByDescending(c => c.CreatedAt);
                }

                @if (publicComments.Any())
                {
                    <div class="space-y-6">
                        @foreach (var comment in publicComments)
                        {
                            <div class="border border-gray-200 rounded-xl p-6 hover:bg-gray-50 transition-colors">
                                <div class="flex items-start">
                                    <!-- Avatar -->
                                    <div class="flex-shrink-0 mr-4">
                                        <div class="w-12 h-12 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-full flex items-center justify-center shadow-md">
                                            <span class="text-white font-semibold text-lg">
                                                @comment.User.FullName.Substring(0, 1).ToUpper()
                                            </span>
                                        </div>
                                    </div>

                                    <!-- Comment Content -->
                                    <div class="flex-1">
                                        <!-- Comment Header -->
                                        <div class="flex items-center justify-between mb-3">
                                            <div>
                                                <h4 class="text-lg font-semibold text-gray-900">@comment.User.FullName</h4>
                                                <p class="text-sm text-gray-500">@comment.CreatedAt.ToString("dd MMMM yyyy, HH:mm")</p>
                                            </div>

                                            <!-- Comment Badge -->
                                            <span class="inline-flex items-center px-2.5 py-0.5 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                                                <i class="fas fa-comment mr-1"></i>
                                                Müşteri Yorumu
                                            </span>
                                        </div>

                                        <!-- Comment Text -->
                                        <div class="prose max-w-none">
                                            <p class="text-gray-800 leading-relaxed whitespace-pre-wrap">@comment.Content</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-12">
                        <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-comment-slash text-gray-400 text-2xl"></i>
                        </div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Henüz Yorum Yok</h3>
                        <p class="text-gray-600">Bu ticket için henüz hiç yorum yapılmamış.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar - Takes 1/4 of the width -->
    <div class="space-y-6">

        <!-- Ticket Information -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100">
            <div class="px-6 py-4 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-gray-100">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i class="fas fa-info-circle mr-2 text-blue-600"></i>
                    Ticket Bilgileri
                </h3>
            </div>
            <div class="px-6 py-6 space-y-4">
                <!-- Status -->
                <div>
                    <dt class="text-sm font-medium text-gray-600 mb-2">Durum</dt>
                    <dd>
                        <span class="inline-flex items-center px-3 py-1 text-sm font-semibold rounded-full
                            @(Model.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                                            Model.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                                            Model.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                                            "bg-gray-100 text-gray-800")">
                            @Model.StatusDisplay
                        </span>
                    </dd>
                </div>

                <!-- Type -->
                <div>
                    <dt class="text-sm font-medium text-gray-600 mb-2">Ticket Türü</dt>
                    <dd class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-2" style="background-color: @Model.Type.Color"></div>
                        <span class="text-sm font-medium text-gray-900">@Model.Type.Name</span>
                    </dd>
                </div>

                <!-- Category -->
                <div>
                    <dt class="text-sm font-medium text-gray-600 mb-2">Kategori</dt>
                    <dd class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-2" style="background-color: @Model.Category.Color"></div>
                        <span class="text-sm font-medium text-gray-900">@Model.Category.Name</span>
                    </dd>
                </div>

                <!-- Dates -->
                <div class="border-t border-gray-200 pt-4">
                    <div class="space-y-3">
                        <div>
                            <dt class="text-sm font-medium text-gray-600">Oluşturulma</dt>
                            <dd class="text-sm text-gray-900 font-medium">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                        </div>
                        <div>
                            <dt class="text-sm font-medium text-gray-600">Son Güncelleme</dt>
                            <dd class="text-sm text-gray-900 font-medium">@Model.UpdatedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Guide -->
        <div class="bg-gradient-to-br from-blue-50 to-indigo-50 border border-blue-200 rounded-2xl p-6">
            <h4 class="text-lg font-semibold text-blue-900 mb-4 flex items-center">
                <i class="fas fa-info-circle mr-2"></i>
                Durum Rehberi
            </h4>
            <div class="space-y-3 text-sm">
                @switch (Model.Status)
                {
                    case TicketSystem.Domain.Enums.TicketStatus.İnceleniyor:
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Şu Anda:</p>
                                <p class="text-blue-800">Ticket'ınız sistem yöneticileri tarafından inceleniyor</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Sonraki:</p>
                                <p class="text-blue-800">1-2 gün içinde değerlendirme tamamlanacak</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.İşlemde:
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Şu Anda:</p>
                                <p class="text-blue-800">Ticket'ınız onaylandı ve işleniyor</p>
                            </div>
                        </div>
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Sonraki:</p>
                                <p class="text-blue-800">Gelişmeler hakkında bilgilendirileceksiniz</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.Çözüldü:
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Tamamlandı:</p>
                                <p class="text-blue-800">Ticket'ınız başarıyla çözüldü</p>
                            </div>
                        </div>
                        break;
                    case TicketSystem.Domain.Enums.TicketStatus.Kapandı:
                        <div class="flex items-start">
                            <div class="w-2 h-2 bg-gray-500 rounded-full mt-2 mr-3"></div>
                            <div>
                                <p class="font-medium text-blue-900">Kapatıldı:</p>
                                <p class="text-blue-800">Ticket işlemi tamamlandı</p>
                            </div>
                        </div>
                        break;
                }
            </div>
        </div>

        <!-- Help & Support -->
        <div class="bg-green-50 border border-green-200 rounded-2xl p-6">
            <h4 class="text-lg font-semibold text-green-900 mb-4 flex items-center">
                <i class="fas fa-question-circle mr-2"></i>
                Yardım
            </h4>
            <div class="space-y-3 text-sm text-green-800">
                <div class="flex items-start">
                    <i class="fas fa-clock text-green-600 mt-1 mr-3"></i>
                    <div>
                        <p class="font-medium">Yanıt Süreleri</p>
                        <p>Genellikle 1-2 iş günü içinde yanıt alırsınız</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-bell text-green-600 mt-1 mr-3"></i>
                    <div>
                        <p class="font-medium">Bildirimler</p>
                        <p>Güncellemeler e-posta ile bildirilir</p>
                    </div>
                </div>
                <div class="flex items-start">
                    <i class="fas fa-phone text-green-600 mt-1 mr-3"></i>
                    <div>
                        <p class="font-medium">Acil Durumlar</p>
                        <p>Kritik sorunlar için destek hattını arayın</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
            <h4 class="text-lg font-semibold text-gray-900 mb-4">Hızlı İşlemler</h4>
            <div class="space-y-3">
                <a href="@Url.Action("Create")"
                   class="flex items-center w-full px-4 py-3 bg-blue-50 text-blue-700 rounded-xl hover:bg-blue-100 transition-colors">
                    <i class="fas fa-plus mr-3"></i>
                    <span class="font-medium">Yeni Ticket Oluştur</span>
                </a>
                <a href="@Url.Action("Index")"
                   class="flex items-center w-full px-4 py-3 bg-gray-50 text-gray-700 rounded-xl hover:bg-gray-100 transition-colors">
                    <i class="fas fa-list mr-3"></i>
                    <span class="font-medium">Tüm Ticket'lar</span>
                </a>
                <button onclick="window.print()"
                        class="flex items-center w-full px-4 py-3 bg-gray-50 text-gray-700 rounded-xl hover:bg-gray-100 transition-colors">
                    <i class="fas fa-print mr-3"></i>
                    <span class="font-medium">Yazdır</span>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add smooth scroll behavior
            document.documentElement.style.scrollBehavior = 'smooth';

            // Form submission enhancements
            const commentForm = document.querySelector('form[asp-action="AddComment"]');
            if (commentForm) {
                commentForm.addEventListener('submit', function(e) {
                    const submitBtn = commentForm.querySelector('button[type="submit"]');
                    const textarea = commentForm.querySelector('textarea[name="content"]');

                    if (textarea && textarea.value.trim() === '') {
                        e.preventDefault();
                        textarea.classList.add('border-red-500');
                        textarea.focus();
                        return false;
                    }

                    if (submitBtn && !submitBtn.disabled) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<div class="flex items-center"><div class="animate-spin rounded-full h-4 w-4 border-2 border-white border-t-transparent mr-2"></div>Gönderiliyor...</div>';
                    }
                });
            }

            // Auto-expand textarea
            const textarea = document.querySelector('textarea[name="content"]');
            if (textarea) {
                textarea.addEventListener('input', function() {
                    this.style.height = 'auto';
                    this.style.height = this.scrollHeight + 'px';

                    // Remove error styling on input
                    this.classList.remove('border-red-500');
                });
            }

            // Add entrance animations
            const elements = document.querySelectorAll('.space-y-6 > div, .space-y-4 > div');
            elements.forEach((el, index) => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    el.style.transition = 'all 0.5s ease-out';
                    el.style.opacity = '1';
                    el.style.transform = 'translateY(0)';
                }, index * 100);
            });
        });

        // Keyboard shortcuts
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                window.location.href = '@Url.Action("Index")';
            }
            if (e.key === 'n' && e.ctrlKey) {
                e.preventDefault();
                window.location.href = '@Url.Action("Create")';
            }
        });
    </script>

    <style>
        /* Print styles */
        @@media print {
            .no-print

        {
            display: none !important;
        }

        body {
            font-size: 12pt;
            line-height: 1.5;
        }

        .bg-gradient-to-r,
        .bg-gradient-to-br {
            background: #f8f9fa !important;
            color: #000 !important;
        }

        }

        /* Enhanced hover effects */
        .hover\:shadow-md:hover {
            transform: translateY(-2px);
        }

        /* Custom scrollbar for textarea */
        textarea::-webkit-scrollbar {
            width: 8px;
        }

        textarea::-webkit-scrollbar-track {
            background: #f1f5f9;
            border-radius: 4px;
        }

        textarea::-webkit-scrollbar-thumb {
            background: #cbd5e1;
            border-radius: 4px;
        }

            textarea::-webkit-scrollbar-thumb:hover {
                background: #94a3b8;
            }
    </style>
}