@model TicketSystem.Application.Features.Dashboard.Queries.GetDashboardStats.DashboardStatsDto
@{
    ViewData["Title"] = "Müşteri Dashboard";
    var recentTickets = ViewBag.RecentTickets as List<TicketSystem.Application.Features.Tickets.DTOs.TicketListDto>;
}

<!-- Welcome Section -->
<div class="bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg text-white p-6 mb-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold">Hoş Geldiniz!</h1>
            <p class="text-blue-100 mt-1">
                @User.FindFirst(System.Security.Claims.ClaimTypes.GivenName)?.Value
                @User.FindFirst(System.Security.Claims.ClaimTypes.Surname)?.Value
            </p>
        </div>
        <div class="text-right">
            <p class="text-blue-100 text-sm">Bugün</p>
            <p class="text-xl font-semibold">@DateTime.Now.ToString("dd.MM.yyyy")</p>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <a href="@Url.Action("Create", "Tickets")" class="bg-white p-6 rounded-lg shadow hover:shadow-md transition duration-200">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
                <i class="fas fa-plus text-xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Yeni Ticket</h3>
                <p class="text-sm text-gray-600">Yeni bir destek talebi oluşturun</p>
            </div>
        </div>
    </a>

    <a href="@Url.Action("Index", "Tickets")" class="bg-white p-6 rounded-lg shadow hover:shadow-md transition duration-200">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                <i class="fas fa-ticket-alt text-xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Ticket'larım</h3>
                <p class="text-sm text-gray-600">Tüm ticket'larınızı görüntüleyin</p>
            </div>
        </div>
    </a>

    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-purple-100 text-purple-600">
                <i class="fas fa-headset text-xl"></i>
            </div>
            <div class="ml-4">
                <h3 class="text-lg font-medium text-gray-900">Destek</h3>
                <p class="text-sm text-gray-600">7/24 müşteri desteği</p>
            </div>
        </div>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-blue-100 text-blue-600">
                <i class="fas fa-ticket-alt text-xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Toplam Ticket</p>
                <p class="text-2xl font-semibold text-gray-900">@Model.TotalTickets</p>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-yellow-100 text-yellow-600">
                <i class="fas fa-clock text-xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Bekleyen</p>
                <p class="text-2xl font-semibold text-gray-900">@Model.ActiveTickets</p>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-green-100 text-green-600">
                <i class="fas fa-check-circle text-xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Çözülen</p>
                <p class="text-2xl font-semibold text-gray-900">@Model.ResolvedTickets</p>
            </div>
        </div>
    </div>

    <div class="bg-white p-6 rounded-lg shadow">
        <div class="flex items-center">
            <div class="p-3 rounded-full bg-gray-100 text-gray-600">
                <i class="fas fa-archive text-xl"></i>
            </div>
            <div class="ml-4">
                <p class="text-sm font-medium text-gray-600">Kapatılan</p>
                <p class="text-2xl font-semibold text-gray-900">@Model.ClosedTickets</p>
            </div>
        </div>
    </div>
</div>

<!-- Logout -->
<div class="mt-8 text-center">
    <form method="post" action="/Auth/Logout" class="inline">
        @Html.AntiForgeryToken()
        <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-md hover:bg-red-700 transition-colors">
            🚪 Çıkış Yap
        </button>
    </form>
</div>

<!-- Recent Tickets -->
<div class="bg-white rounded-lg shadow">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
            <h3 class="text-lg font-medium text-gray-900">Son Ticket'lar</h3>
            <a href="@Url.Action("Index", "Tickets")" class="text-blue-600 hover:text-blue-800 text-sm font-medium">
                Tümünü Gör <i class="fas fa-arrow-right ml-1"></i>
            </a>
        </div>
    </div>

    @if (recentTickets?.Any() == true)
    {
        <div class="divide-y divide-gray-200">
            @foreach (var ticket in recentTickets)
            {
                <div class="px-6 py-4 hover:bg-gray-50">
                    <div class="flex items-center justify-between">
                        <div class="flex-1">
                            <div class="flex items-center">
                                <span class="text-sm font-medium text-gray-900">@ticket.TicketNumber</span>
                                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full ml-3
                                            @(ticket.StatusDisplay == "İnceleniyor" ? "bg-yellow-100 text-yellow-800" :
                                                                            ticket.StatusDisplay == "İşlemde" ? "bg-blue-100 text-blue-800" :
                                                                            ticket.StatusDisplay == "Çözüldü" ? "bg-green-100 text-green-800" :
                                                                            "bg-gray-100 text-gray-800")">
                            @ticket.StatusDisplay
                        </span>
                    </div>
                    <p class="text-gray-900 mt-1">@ticket.Title</p>
                    <div class="flex items-center mt-2 text-sm text-gray-500">
                        <div class="w-3 h-3 rounded-full mr-2" style="background-color: @ticket.TypeColor"></div>
                        <span>@ticket.TypeName</span>
                        <span class="mx-2">•</span>
                        <span>@ticket.CreatedAt.ToString("dd.MM.yyyy")</span>
                    </div>
                </div>
                <a href="@Url.Action("Details", new { id = ticket.Id })"
                   class="ml-4 text-blue-600 hover:text-blue-800">
                    <i class="fas fa-eye"></i>
                </a>
            </div>
        </div>
                }
        </div>
    }
    else
    {
        <div class="text-center py-12">
            <i class="fas fa-ticket-alt text-gray-400 text-4xl mb-4"></i>
            <h3 class="text-lg font-medium text-gray-900 mb-2">Henüz ticket'ınız yok</h3>
            <p class="text-gray-500 mb-4">İlk destek talebinizi oluşturun.</p>
            <a href="@Url.Action("Create", "Tickets")"
               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700">
                <i class="fas fa-plus mr-2"></i>Yeni Ticket Oluştur
            </a>
        </div>
    }

    
</div>