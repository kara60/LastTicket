@model TicketSystem.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş - Ticket System</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-blue-600 to-purple-700 min-h-screen flex items-center justify-center">
    <div class="bg-white p-8 rounded-lg shadow-2xl w-full max-w-md">
        <!-- Logo -->
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-blue-600 rounded-full mx-auto flex items-center justify-center mb-4">
                <i class="fas fa-ticket-alt text-white text-2xl"></i>
            </div>
            <h1 class="text-2xl font-bold text-gray-800">Ticket System</h1>
            <p class="text-gray-600 mt-2">Hesabınıza giriş yapın</p>
        </div>

        <!-- Error Messages -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
                <div asp-validation-summary="All" class="text-sm"></div>
            </div>
        }

        <!-- Login Form -->
        <form method="post" asp-action="Login" asp-controller="Auth">
            @Html.AntiForgeryToken()

            <!-- Username -->
            <div class="mb-4">
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-user mr-2"></i>Kullanıcı Adı
                </label>
                <input asp-for="Username"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Kullanıcı adınızı giriniz"
                       autocomplete="username" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <!-- Password -->
            <div class="mb-6">
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-2">
                    <i class="fas fa-lock mr-2"></i>Şifre
                </label>
                <input asp-for="Password"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"
                       placeholder="Şifrenizi giriniz"
                       autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <!-- Remember Me -->
            <div class="mb-6">
                <label class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                    <span class="ml-2 text-sm text-gray-700">Beni hatırla</span>
                </label>
            </div>

            <!-- Submit Button -->
            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">
                <i class="fas fa-sign-in-alt mr-2"></i>Giriş Yap
            </button>
        </form>

        <!-- Demo Accounts -->
        <div class="mt-8 p-4 bg-gray-50 rounded-md">
            <h3 class="text-sm font-medium text-gray-700 mb-2">Demo Hesaplar:</h3>
            <div class="text-xs text-gray-600 space-y-1">
                <div><strong>Admin:</strong> admin / Admin123!</div>
                <div><strong>Customer:</strong> ahmet / Customer123!</div>
            </div>
        </div>
    </div>

    <!-- Loading Animation -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitButton = form.querySelector('button[type="submit"]');

            form.addEventListener('submit', function() {
                submitButton.disabled = true;
                submitButton.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Giriş yapılıyor...';
            });
        });
    </script>
</body>
</html>