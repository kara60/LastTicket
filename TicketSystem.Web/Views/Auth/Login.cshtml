@model TicketSystem.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş - SoftDesk</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    fontFamily: {
                        'sans': ['Inter', 'system-ui', 'sans-serif'],
                    },
                    animation: {
                        'float': 'float 6s ease-in-out infinite',
                        'fade-in': 'fadeIn 0.8s ease-out',
                        'slide-up': 'slideUp 0.6s ease-out',
                        'gradient': 'gradient 15s ease infinite',
                    },
                    keyframes: {
                        float: {
                            '0%, 100%': { transform: 'translateY(0px)' },
                            '50%': { transform: 'translateY(-15px)' }
                        },
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        },
                        slideUp: {
                            '0%': { opacity: '0', transform: 'translateY(30px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        },
                        gradient: {
                            '0%': { backgroundPosition: '0% 50%' },
                            '50%': { backgroundPosition: '100% 50%' },
                            '100%': { backgroundPosition: '0% 50%' }
                        }
                    }
                }
            }
        }
    </script>

    <style>
        body {
            font-family: 'Inter', system-ui, sans-serif;
        }

        .animated-bg {
            background: linear-gradient(-45deg, #1e3a8a, #312e81, #7c3aed, #be185d, #1e40af, #0f172a);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
        }

        .glass-card {
            backdrop-filter: blur(20px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .glass-form {
            backdrop-filter: blur(20px);
            background: rgba(255, 255, 255, 0.95);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }
    </style>
</head>
<body class="min-h-screen overflow-hidden">
    <div class="min-h-screen flex">

        <!-- Sol Panel - Modern Branding -->
        <div class="hidden lg:flex lg:w-1/2 animated-bg relative overflow-hidden">

            <!-- Floating Shapes -->
            <div class="absolute top-16 left-16 w-20 h-20 bg-white/10 rounded-full blur-xl animate-float"></div>
            <div class="absolute top-32 right-24 w-16 h-16 bg-white/8 rounded-full blur-lg animate-float" style="animation-delay: 2s;"></div>
            <div class="absolute bottom-24 left-24 w-24 h-24 bg-white/12 rounded-full blur-2xl animate-float" style="animation-delay: 4s;"></div>
            <div class="absolute bottom-40 right-16 w-12 h-12 bg-white/15 rounded-full blur-lg animate-float" style="animation-delay: 1s;"></div>

            <div class="relative z-10 flex flex-col justify-center px-12 py-8 text-white w-full">

                <!-- Logo ve Başlık -->
                <div class="mb-10 animate-fade-in">
                    <div class="flex items-center mb-8">
                        <div class="w-14 h-14 glass-card rounded-2xl flex items-center justify-center mr-4">
                            <i class="fas fa-ticket-alt text-white text-xl"></i>
                        </div>
                        <div>
                            <h1 class="text-3xl font-bold">SoftDesk</h1>
                            <p class="text-white/80 font-medium">by Softeconomics</p>
                        </div>
                    </div>

                    <h2 class="text-2xl font-bold mb-3 leading-tight">
                        Profesyonel Ticket<br>
                        Yönetim Sistemi
                    </h2>

                    <p class="text-white/90 text-lg leading-relaxed">
                        Müşteri destek süreçlerinizi dijitalleştirin ve ekip verimliliğinizi artırın.
                    </p>
                </div>

                <!-- 2x2 Özellik Kartları Grid -->
                <div class="grid grid-cols-2 gap-4 animate-slide-up">

                    <!-- Kart 1 -->
                    <div class="glass-card rounded-xl p-4 hover:bg-white/15 transition-all duration-300 hover:scale-105 group">
                        <div class="w-10 h-10 bg-gradient-to-r from-pink-400 to-rose-400 rounded-lg flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <i class="fas fa-rocket text-white"></i>
                        </div>
                        <h3 class="font-bold text-lg text-white mb-2">Hızlı Oluşturma</h3>
                        <p class="text-white/80 text-sm leading-relaxed">
                            4 adımda kolay ticket oluşturma süreci
                        </p>
                    </div>

                    <!-- Kart 2 -->
                    <div class="glass-card rounded-xl p-4 hover:bg-white/15 transition-all duration-300 hover:scale-105 group">
                        <div class="w-10 h-10 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-lg flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <i class="fas fa-cogs text-white"></i>
                        </div>
                        <h3 class="font-bold text-lg text-white mb-2">Dinamik Formlar</h3>
                        <p class="text-white/80 text-sm leading-relaxed">
                            Özelleştirilebilir form alanları ve modüller
                        </p>
                    </div>

                    <!-- Kart 3 -->
                    <div class="glass-card rounded-xl p-4 hover:bg-white/15 transition-all duration-300 hover:scale-105 group">
                        <div class="w-10 h-10 bg-gradient-to-r from-purple-400 to-indigo-400 rounded-lg flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <i class="fas fa-shield-alt text-white"></i>
                        </div>
                        <h3 class="font-bold text-lg text-white mb-2">Güvenli Sistem</h3>
                        <p class="text-white/80 text-sm leading-relaxed">
                            JWT tabanlı güvenli erişim kontrolü
                        </p>
                    </div>

                    <!-- Kart 4 -->
                    <div class="glass-card rounded-xl p-4 hover:bg-white/15 transition-all duration-300 hover:scale-105 group">
                        <div class="w-10 h-10 bg-gradient-to-r from-emerald-400 to-teal-400 rounded-lg flex items-center justify-center mb-3 group-hover:scale-110 transition-transform">
                            <i class="fas fa-chart-bar text-white"></i>
                        </div>
                        <h3 class="font-bold text-lg text-white mb-2">Akıllı Analitik</h3>
                        <p class="text-white/80 text-sm leading-relaxed">
                            Real-time dashboard ve raporlama
                        </p>
                    </div>

                </div>

                <!-- Alt Bilgi -->
                <div class="mt-8 pt-6 border-t border-white/20">
                    <p class="text-white/70 text-sm">
                        <span class="font-semibold">Softeconomics</span> tarafından geliştirilmiştir.
                    </p>
                </div>
            </div>
        </div>

        <!-- Sağ Panel - Login Form -->
        <div class="w-full lg:w-1/2 flex items-center justify-center px-8 py-12 bg-gradient-to-br from-gray-50 to-blue-50 relative">

            <!-- Mobile Logo -->
            <div class="lg:hidden absolute top-8 left-1/2 transform -translate-x-1/2">
                <div class="flex items-center">
                    <div class="w-12 h-12 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl flex items-center justify-center mr-3">
                        <i class="fas fa-ticket-alt text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900">SoftDesk</h1>
                        <p class="text-sm text-gray-500">by Softeconomics</p>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-md animate-slide-up">

                <!-- Login Kartı -->
                <div class="glass-form rounded-2xl p-8 shadow-2xl">

                    <!-- Başlık -->
                    <div class="text-center mb-8">
                        <div class="w-16 h-16 bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4 shadow-lg">
                            <i class="fas fa-user-circle text-white text-2xl"></i>
                        </div>
                        <h2 class="text-3xl font-bold text-gray-900 mb-2">Hoş Geldiniz</h2>
                        <p class="text-gray-600">Devam etmek için giriş yapın</p>
                    </div>

                    <!-- Form -->
                    <form method="post" asp-action="Login" asp-controller="Auth" class="space-y-6">
                        @Html.AntiForgeryToken()

                        <!-- Kullanıcı Adı -->
                        <div>
                            <label asp-for="Username" class="block text-sm font-semibold text-gray-700 mb-3">
                                Kullanıcı Adı
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-user text-gray-400"></i>
                                </div>
                                <input asp-for="Username"
                                       class="w-full pl-12 pr-4 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-white shadow-sm hover:shadow-md"
                                       placeholder="Kullanıcı adınızı giriniz" />
                            </div>
                            <span asp-validation-for="Username" class="text-red-500 text-sm mt-2 block"></span>
                        </div>

                        <!-- Şifre -->
                        <div>
                            <label asp-for="Password" class="block text-sm font-semibold text-gray-700 mb-3">
                                Şifre
                            </label>
                            <div class="relative">
                                <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                    <i class="fas fa-lock text-gray-400"></i>
                                </div>
                                <input asp-for="Password" type="password"
                                       class="w-full pl-12 pr-12 py-4 border-2 border-gray-200 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all bg-white shadow-sm hover:shadow-md"
                                       placeholder="Şifrenizi giriniz"
                                       id="passwordInput" />
                                <button type="button" onclick="togglePassword()"
                                        class="absolute inset-y-0 right-0 pr-4 flex items-center text-gray-400 hover:text-gray-600 transition-colors">
                                    <i class="fas fa-eye" id="eyeIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-red-500 text-sm mt-2 block"></span>
                        </div>

                        <!-- Beni Hatırla -->
                        <div class="flex items-center">
                            <input asp-for="RememberMe" type="checkbox"
                                   class="h-5 w-5 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
                            <label asp-for="RememberMe" class="ml-3 text-sm font-medium text-gray-700">
                                Beni hatırla
                            </label>
                        </div>

                        <!-- Giriş Butonu -->
                        <button type="submit"
                                class="w-full py-4 px-6 bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-bold rounded-xl transition-all transform hover:scale-105 shadow-xl hover:shadow-2xl">
                            <span id="loginText">
                                <i class="fas fa-sign-in-alt mr-2"></i>Giriş Yap
                            </span>
                            <span id="loadingText" class="hidden">
                                <i class="fas fa-spinner fa-spin mr-2"></i>Giriş yapılıyor...
                            </span>
                        </button>
                    </form>
                </div>

                <!-- Demo Hesapları -->
                <div class="mt-6 bg-white/80 backdrop-blur-sm rounded-2xl p-6 shadow-lg border border-white/20">
                    <h3 class="text-sm font-semibold text-gray-900 text-center mb-4 flex items-center justify-center">
                        <i class="fas fa-rocket mr-2 text-blue-500"></i>
                        Demo Hesapları
                    </h3>
                    <div class="grid grid-cols-2 gap-4">
                        <button onclick="fillAdmin()"
                                class="p-4 bg-gradient-to-r from-blue-50 to-blue-100 hover:from-blue-100 hover:to-blue-200 rounded-xl transition-all text-center group hover:shadow-lg transform hover:scale-105">
                            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full mx-auto mb-2 flex items-center justify-center group-hover:scale-110 transition-transform shadow-md">
                                <i class="fas fa-user-tie text-white"></i>
                            </div>
                            <div class="font-bold text-gray-900">Admin</div>
                            <div class="text-xs text-gray-500 mt-1">admin</div>
                        </button>

                        <button onclick="fillCustomer()"
                                class="p-4 bg-gradient-to-r from-green-50 to-green-100 hover:from-green-100 hover:to-green-200 rounded-xl transition-all text-center group hover:shadow-lg transform hover:scale-105">
                            <div class="w-10 h-10 bg-gradient-to-r from-green-500 to-green-600 rounded-full mx-auto mb-2 flex items-center justify-center group-hover:scale-110 transition-transform shadow-md">
                                <i class="fas fa-user text-white"></i>
                            </div>
                            <div class="font-bold text-gray-900">Müşteri</div>
                            <div class="text-xs text-gray-500 mt-1">ahmet</div>
                        </button>
                    </div>
                    <p class="text-xs text-gray-400 text-center mt-4">
                        <kbd class="bg-gray-100 px-2 py-1 rounded text-xs font-mono">Ctrl+1</kbd> Admin,
                        <kbd class="bg-gray-100 px-2 py-1 rounded text-xs font-mono">Ctrl+2</kbd> Müşteri
                    </p>
                </div>

                <!-- Mobile Footer -->
                <div class="lg:hidden text-center mt-8 text-sm text-gray-500">
                    © 2025 Softeconomics. Tüm hakları saklıdır.
                </div>
            </div>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        function fillAdmin() {
            document.querySelector('[name="Username"]').value = 'admin';
            document.querySelector('[name="Password"]').value = 'Admin123!';
        }

        function fillCustomer() {
            document.querySelector('[name="Username"]').value = 'ahmet';
            document.querySelector('[name="Password"]').value = 'Customer123!';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitButton = form.querySelector('button[type="submit"]');
            const loginText = document.getElementById('loginText');
            const loadingText = document.getElementById('loadingText');

            form.addEventListener('submit', function() {
                submitButton.disabled = true;
                loginText.classList.add('hidden');
                loadingText.classList.remove('hidden');

                setTimeout(() => {
                    if (submitButton.disabled) {
                        submitButton.disabled = false;
                        loginText.classList.remove('hidden');
                        loadingText.classList.add('hidden');
                    }
                }, 5000);
            });

            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === '1') {
                    e.preventDefault();
                    fillAdmin();
                }
                if (e.ctrlKey && e.key === '2') {
                    e.preventDefault();
                    fillCustomer();
                }
            });
        });
    </script>
</body>
</html>