@model TicketSystem.Web.Models.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş - SoftDesk</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    animation: {
                        'fade-up': 'fadeUp 0.8s ease-out',
                        'slide-in': 'slideIn 1s ease-out',
                        'float-1': 'float1 6s ease-in-out infinite',
                        'float-2': 'float2 8s ease-in-out infinite',
                        'float-3': 'float3 10s ease-in-out infinite',
                        'glow': 'glow 2s ease-in-out infinite alternate',
                        'shimmer': 'shimmer 3s ease-in-out infinite',
                        'bounce-slow': 'bounce 3s infinite',
                    },
                    keyframes: {
                        fadeUp: {
                            '0%': { opacity: '0', transform: 'translateY(30px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' }
                        },
                        slideIn: {
                            '0%': { opacity: '0', transform: 'translateX(-50px)' },
                            '100%': { opacity: '1', transform: 'translateX(0)' }
                        },
                        float1: {
                            '0%, 100%': { transform: 'translate(0, 0) rotate(0deg)' },
                            '33%': { transform: 'translate(30px, -30px) rotate(120deg)' },
                            '66%': { transform: 'translate(-20px, 20px) rotate(240deg)' }
                        },
                        float2: {
                            '0%, 100%': { transform: 'translate(0, 0) rotate(0deg)' },
                            '50%': { transform: 'translate(-40px, -20px) rotate(180deg)' }
                        },
                        float3: {
                            '0%, 100%': { transform: 'translate(0, 0) scale(1)' },
                            '50%': { transform: 'translate(20px, -40px) scale(1.1)' }
                        },
                        glow: {
                            '0%': { boxShadow: '0 0 20px rgba(59, 130, 246, 0.4)' },
                            '100%': { boxShadow: '0 0 40px rgba(59, 130, 246, 0.8)' }
                        },
                        shimmer: {
                            '0%': { backgroundPosition: '-200% 0' },
                            '100%': { backgroundPosition: '200% 0' }
                        }
                    },
                    fontFamily: {
                        'display': ['Inter', 'ui-sans-serif', 'system-ui', 'sans-serif'],
                    },
                    backgroundImage: {
                        'gradient-radial': 'radial-gradient(var(--tw-gradient-stops))',
                        'shimmer': 'linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent)',
                    }
                }
            }
        }
    </script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        .gradient-mesh {
            background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 25%, #60a5fa 50%, #2563eb 75%, #1d4ed8 100%);
            background-size: 400% 400%;
            animation: gradientShift 15s ease infinite;
        }

        @@keyframes gradientShift {
            0%

        {
            background-position: 0% 50%;
        }

        50% {
            background-position: 100% 50%;
        }

        100% {
            background-position: 0% 50%;
        }

        }

        .glass-morphism {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.25);
        }

        .feature-card {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.25);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

            .feature-card:hover {
                background: rgba(255, 255, 255, 0.25);
                transform: translateY(-8px) scale(1.02);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .input-modern {
            background: rgba(255, 255, 255, 0.9);
            border: 2px solid transparent;
            transition: all 0.3s ease;
        }

            .input-modern:focus {
                background: rgba(255, 255, 255, 1);
                border-color: #3b82f6;
                transform: translateY(-2px);
                box-shadow: 0 10px 30px rgba(59, 130, 246, 0.2);
            }

        .btn-modern {
            background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-modern:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(37, 99, 235, 0.4);
            }

            .btn-modern:before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: left 0.5s;
            }

            .btn-modern:hover:before {
                left: 100%;
            }

        .icon-wrapper {
            background: linear-gradient(135deg, rgba(255,255,255,0.25), rgba(255,255,255,0.15));
            border: 1px solid rgba(255,255,255,0.35);
            backdrop-filter: blur(10px);
        }

        .floating-shape {
            position: absolute;
            background: rgba(255, 255, 255, 0.08);
            border-radius: 50%;
        }

        .shimmer-text {
            background: linear-gradient(90deg, #e0e7ff, #c7d2fe, #a5b4fc, #e0e7ff);
            background-size: 200% 100%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: shimmer 3s ease-in-out infinite;
        }
    </style>
</head>
<body class="min-h-screen gradient-mesh flex overflow-hidden">

    <!-- Floating Background Elements -->
    <div class="floating-shape w-64 h-64 top-10 left-10 animate-float-1"></div>
    <div class="floating-shape w-32 h-32 top-1/3 right-20 animate-float-2"></div>
    <div class="floating-shape w-48 h-48 bottom-20 left-1/4 animate-float-3"></div>
    <div class="floating-shape w-20 h-20 bottom-40 right-1/3 animate-float-1" style="animation-delay: 2s;"></div>

    <!-- Sol Taraf - SoftDesk Tanıtım -->
    <div class="hidden lg:flex lg:w-1/2 relative">
        <div class="flex flex-col justify-center p-12 text-white relative z-10 w-full">

            <!-- Logo ve Başlık -->
            <div class="mb-12 animate-slide-in">
                <div class="flex items-center mb-6">
                    <div class="icon-wrapper w-14 h-14 rounded-2xl mr-5 flex items-center justify-center animate-glow">
                        <i class="fas fa-rocket text-xl text-white"></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-black tracking-tight shimmer-text">SoftDesk</h1>
                        <p class="text-white/80 text-base font-medium">by Softeconomics</p>
                    </div>
                </div>
                <h2 class="text-2xl font-bold mb-4">Gelecek Nesil Ticket Sistemi</h2>
                <p class="text-white/90 text-lg leading-relaxed font-light">
                    İşletmenizi dijital dönüşümde bir adım öne taşıyan akıllı çözümler.
                </p>
            </div>

            <!-- Modern Feature Cards - 2x2 Grid -->
            <div class="grid grid-cols-2 gap-5 mb-12">
                <!-- Card 1 -->
                <div class="feature-card p-5 rounded-2xl animate-fade-up" style="animation-delay: 0.1s;">
                    <div class="icon-wrapper w-12 h-12 rounded-xl mb-3 flex items-center justify-center">
                        <i class="fas fa-clipboard-list text-white text-lg"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">4 Adımlı Ticket Oluşturma</h3>
                    <p class="text-white/80 text-sm leading-relaxed">
                        Tür seç → Kategori seç → Form doldur → Önizle ve gönder
                    </p>
                </div>

                <!-- Card 2 -->
                <div class="feature-card p-5 rounded-2xl animate-fade-up" style="animation-delay: 0.2s;">
                    <div class="icon-wrapper w-12 h-12 rounded-xl mb-3 flex items-center justify-center">
                        <i class="fas fa-cogs text-white text-lg"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">Dinamik Tanımlar</h3>
                    <p class="text-white/80 text-sm leading-relaxed">
                        Şirketinize özel kategori, tür ve form tanımlamaları
                    </p>
                </div>

                <!-- Card 3 -->
                <div class="feature-card p-5 rounded-2xl animate-fade-up" style="animation-delay: 0.3s;">
                    <div class="icon-wrapper w-12 h-12 rounded-xl mb-3 flex items-center justify-center">
                        <i class="fas fa-shield-alt text-white text-lg"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">Güvenlik Önlemleri</h3>
                    <p class="text-white/80 text-sm leading-relaxed">
                        JWT authentication, rol tabanlı yetkilendirme
                    </p>
                </div>

                <!-- Card 4 -->
                <div class="feature-card p-5 rounded-2xl animate-fade-up" style="animation-delay: 0.4s;">
                    <div class="icon-wrapper w-12 h-12 rounded-xl mb-3 flex items-center justify-center">
                        <i class="fas fa-chart-bar text-white text-lg"></i>
                    </div>
                    <h3 class="font-bold text-lg mb-2">Akıllı Dashboard</h3>
                    <p class="text-white/80 text-sm leading-relaxed">
                        Gerçek zamanlı istatistikler ve performans takibi
                    </p>
                </div>
            </div>

            <!-- CTA Section -->
            @* <div class="animate-fade-up" style="animation-delay: 0.6s;">
                <div class="glass-morphism p-5 rounded-2xl">
                    <h3 class="text-lg font-bold mb-2">Hazır mısınız?</h3>
                    <p class="text-white/80 mb-3 text-sm">İşletmenizi geleceğe taşıyın</p>
                    <div class="flex space-x-2">
                        <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce"></div>
                        <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce" style="animation-delay: 0.1s;"></div>
                        <div class="w-2 h-2 bg-white/60 rounded-full animate-bounce" style="animation-delay: 0.2s;"></div>
                    </div>
                </div>
            </div> *@

            <!-- Footer -->
            <div class="mt-8">
                <p class="text-white/60 text-sm">&copy; 2025 Softeconomics. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </div>

    <!-- Sağ Taraf - Modern Login -->
    <div class="w-full lg:w-1/2 flex items-center justify-center p-8 relative">
        <div class="w-full max-w-md relative z-10">

            <!-- Mobile Logo -->
            <div class="lg:hidden text-center mb-12 animate-fade-up">
                <div class="icon-wrapper w-20 h-20 rounded-3xl mx-auto mb-6 flex items-center justify-center animate-glow">
                    <i class="fas fa-rocket text-3xl text-white"></i>
                </div>
                <h1 class="text-4xl font-black shimmer-text mb-2">SoftDesk</h1>
                <p class="text-white/80 text-lg">by Softeconomics</p>
            </div>

            <!-- Login Card -->
            <div class="login-card rounded-3xl p-8 shadow-2xl animate-fade-up" style="animation-delay: 0.2s;">

                <!-- Welcome Section -->
                <div class="text-center mb-8">
                    <div class="w-14 h-14 bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl mx-auto mb-5 flex items-center justify-center animate-glow">
                        <i class="fas fa-user-circle text-xl text-white"></i>
                    </div>
                    <h2 class="text-2xl font-bold text-gray-800 mb-2">Hoş Geldiniz</h2>
                    <p class="text-gray-600">Hesabınıza giriş yapın</p>
                </div>

                <!-- Login Form -->
                <form method="post" asp-action="Login" asp-controller="Auth" class="space-y-6">
                    @Html.AntiForgeryToken()

                    <!-- Username Field -->
                    <div class="space-y-2">
                        <label asp-for="Username" class="block text-sm font-semibold text-gray-700">
                            <i class="fas fa-user mr-2 text-blue-500"></i>Kullanıcı Adı
                        </label>
                        <input asp-for="Username"
                               class="input-modern w-full px-4 py-3 rounded-2xl text-gray-900 placeholder-gray-400 focus:outline-none font-medium"
                               placeholder="Kullanıcı adınızı giriniz"
                               autocomplete="username" />
                        <span asp-validation-for="Username" class="text-red-500 text-sm font-medium"></span>
                    </div>

                    <!-- Password Field -->
                    <div class="space-y-2">
                        <label asp-for="Password" class="block text-sm font-semibold text-gray-700">
                            <i class="fas fa-lock mr-2 text-blue-500"></i>Şifre
                        </label>
                        <div class="relative">
                            <input asp-for="Password"
                                   class="input-modern w-full px-4 py-3 rounded-2xl text-gray-900 placeholder-gray-400 focus:outline-none font-medium pr-12"
                                   placeholder="Şifrenizi giriniz"
                                   autocomplete="current-password"
                                   id="passwordInput" />
                            <button type="button" onclick="togglePassword()" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 transition-all duration-300 p-1 rounded-lg hover:bg-gray-100">
                                <i class="fas fa-eye" id="eyeIcon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-red-500 text-sm font-medium"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="flex items-center justify-between">
                        <label class="flex items-center text-gray-600 cursor-pointer">
                            <input asp-for="RememberMe" type="checkbox" class="h-5 w-5 text-blue-500 focus:ring-blue-500 border-gray-300 rounded-lg">
                            <span class="ml-3 font-medium">Beni hatırla</span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit"
                            class="btn-modern w-full py-3 px-6 rounded-2xl text-white font-bold flex items-center justify-center space-x-3 relative overflow-hidden">
                        <span id="loginText">
                            <i class="fas fa-rocket mr-2"></i>Giriş Yap
                        </span>
                        <span id="loadingText" class="hidden">
                            <i class="fas fa-spinner fa-spin mr-2"></i>Giriş yapılıyor...
                        </span>
                    </button>
                </form>

                <!-- Demo Section -->
                <div class="mt-8 p-5 bg-gradient-to-r from-gray-50 to-blue-50 rounded-2xl border border-gray-200">
                    <div class="text-center mb-3">
                        <h3 class="text-sm font-bold text-gray-700 flex items-center justify-center">
                            <i class="fas fa-magic mr-2 text-blue-500"></i>Hızlı Demo Girişi
                        </h3>
                    </div>
                    <div class="grid grid-cols-2 gap-3 text-xs">
                        <div class="bg-white p-3 rounded-xl border border-gray-200 text-center hover:shadow-md transition-all duration-300 cursor-pointer" onclick="fillAdmin()">
                            <div class="text-blue-600 font-bold mb-1">👨‍💼 Admin</div>
                            <div class="text-gray-600 font-mono">admin</div>
                        </div>
                        <div class="bg-white p-3 rounded-xl border border-gray-200 text-center hover:shadow-md transition-all duration-300 cursor-pointer" onclick="fillCustomer()">
                            <div class="text-green-600 font-bold mb-1">👤 Müşteri</div>
                            <div class="text-gray-600 font-mono">ahmet</div>
                        </div>
                    </div>
                    <p class="text-xs text-gray-500 text-center mt-2">
                        <kbd class="bg-gray-200 px-2 py-1 rounded font-mono">Ctrl+1</kbd> Admin,
                        <kbd class="bg-gray-200 px-2 py-1 rounded font-mono">Ctrl+2</kbd> Müşteri
                    </p>
                </div>
            </div>

            <!-- Mobile Footer -->
            <div class="lg:hidden text-center mt-8 text-white/60 text-sm">
                <p>&copy; 2025 Softeconomics. Tüm hakları saklıdır.</p>
            </div>
        </div>
    </div>

    <script>
        // Password toggle functionality
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const eyeIcon = document.getElementById('eyeIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.classList.remove('fa-eye');
                eyeIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                eyeIcon.classList.remove('fa-eye-slash');
                eyeIcon.classList.add('fa-eye');
            }
        }

        // Demo fill functions
        function fillAdmin() {
            document.querySelector('[name="Username"]').value = 'admin';
            document.querySelector('[name="Password"]').value = 'Admin123!';
        }

        function fillCustomer() {
            document.querySelector('[name="Username"]').value = 'ahmet';
            document.querySelector('[name="Password"]').value = 'Customer123!';
        }

        // Form submission handling
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitButton = form.querySelector('button[type="submit"]');
            const loginText = document.getElementById('loginText');
            const loadingText = document.getElementById('loadingText');

            form.addEventListener('submit', function() {
                submitButton.disabled = true;
                loginText.classList.add('hidden');
                loadingText.classList.remove('hidden');

                setTimeout(() => {
                    submitButton.disabled = false;
                    loginText.classList.remove('hidden');
                    loadingText.classList.add('hidden');
                }, 5000);
            });

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.ctrlKey && e.key === '1') {
                    e.preventDefault();
                    fillAdmin();
                }
                if (e.ctrlKey && e.key === '2') {
                    e.preventDefault();
                    fillCustomer();
                }
            });
        });
    </script>
</body>
</html>